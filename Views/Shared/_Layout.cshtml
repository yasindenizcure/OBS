@using System.Security.Claims
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] // Okul Bilgi Sistemi</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Orbitron:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --sidebar-width: 260px;
            --accent: #00f3ff;
            --bg: #05060b;
            --sidebar-bg: rgba(10, 11, 16, 0.98);
            --border: rgba(0, 243, 255, 0.1);
            --text-muted: #64748b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg);
            color: #e2e8f0;
            display: flex;
            min-height: 100vh;
        }

        aside {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            padding: 25px;
            position: fixed;
            height: 100vh;
            z-index: 1000;
        }

        .brand {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.1rem;
            color: var(--accent);
            letter-spacing: 3px;
            margin-bottom: 40px;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .nav-group {
            flex-grow: 1;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            color: var(--text-muted);
            text-decoration: none;
            border-radius: 8px;
            margin-bottom: 5px;
            transition: 0.2s;
            font-size: 0.9rem;
        }

            .nav-link:hover, .nav-link.active {
                color: var(--accent);
                background: rgba(0, 243, 255, 0.05);
            }

            .nav-link i {
                width: 20px;
                text-align: center;
            }

        .user-footer {
            margin-top: auto;
            padding-top: 20px;
            border-top: 1px solid var(--border);
        }

        .logout-link {
            color: #ff3131;
            text-decoration: none;
            font-size: 0.8rem;
            font-family: 'Orbitron';
            display: flex;
            align-items: center;
            gap: 8px;
            opacity: 0.7;
            transition: 0.3s;
        }

            .logout-link:hover {
                opacity: 1;
                text-shadow: 0 0 10px #ff3131;
            }

        .main-wrapper {
            margin-left: var(--sidebar-width);
            flex-grow: 1;
            padding: 40px;
            background: radial-gradient(circle at top right, rgba(0, 243, 255, 0.02), transparent);
        }

        .nav-label {
            font-family: 'Orbitron';
            font-size: 0.65rem;
            color: #475569;
            margin: 20px 0 10px 15px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
    </style>
</head>
<body>

    @{
        var role = User.FindFirst(ClaimTypes.Role)?.Value?.ToLower().Trim();
    }

    <aside>
        <a href="/Dashboard/Index" class="brand">
            <i class="fas fa-ghost"></i> Okul Bilgi Sistemi
        </a>

        <nav class="nav-group">
            @if (role == "admin" || role == "memur")
            {
                <a href="/Ogrenci/Index" class="nav-link">
                    <i class="fas fa-user-graduate"></i> Öğrenciler
                </a>
                <a href="/OgretimGorevlisi/OgrGorevlisi" class="nav-link">
                    <i class="fas fa-user-tie"></i> Akademik Kadro
                </a>
                <a href="/Ders/Dersler" class="nav-link">
                    <i class="fas fa-book"></i> Müfredat
                </a>

                @if (role == "admin")
                {
                    <a href="/Bolum/BolumListesi" class="nav-link">
                        <i class="fas fa-microchip"></i> Bölümler
                    </a>
                    <a href="/Kullanici/Index" class="nav-link">
                        <i class="fas fa-user-shield"></i> Kullanıcı Yönetimi
                    </a>
                }
            }

            @if (role == "hoca")
            {
                <div class="nav-label">Eğitmen Paneli</div>
                <a href="/Not/NotIndex" class="nav-link">
                    <i class="fas fa-pen-nib"></i> Not Girişi
                </a>
            }
        </nav>

        <div class="user-footer">
            <div style="font-size: 0.85rem; margin-bottom: 15px; color: var(--accent); font-weight: 600;">
                @User.Identity.Name.ToUpper()
            </div>
            <a href="/Login/Logout" class="logout-link">
                <i class="fas fa-power-off"></i> SISTEMDEN AYRIL
            </a>
        </div>
    </aside>

    <div class="main-wrapper">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>