@model List<DenemeDers.Entity.AppUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .security-card {
        background: rgba(10, 11, 16, 0.7);
        border: 1px solid rgba(0, 243, 255, 0.15);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(20px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.6);
        position: relative;
        overflow: hidden;
    }

        .security-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--accent), transparent);
        }

    .cyber-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 15px;
            color: var(--accent);
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            border-bottom: 1px solid rgba(0, 243, 255, 0.1);
        }

        .cyber-table tr {
            background: rgba(255, 255, 255, 0.02);
            transition: 0.3s all ease;
        }

            .cyber-table tr:hover {
                background: rgba(0, 243, 255, 0.05);
                transform: scale(1.005);
            }

        .cyber-table td {
            padding: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

            .cyber-table td:first-child {
                border-left: 1px solid rgba(255, 255, 255, 0.05);
                border-radius: 12px 0 0 12px;
            }

            .cyber-table td:last-child {
                border-right: 1px solid rgba(255, 255, 255, 0.05);
                border-radius: 0 12px 12px 0;
            }

    .role-badge {
        font-family: 'Orbitron';
        font-size: 0.65rem;
        padding: 5px 12px;
        border-radius: 6px;
        border: 1px solid;
        text-transform: uppercase;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .role-admin {
        color: #ff00ff;
        border-color: rgba(255, 0, 255, 0.3);
        background: rgba(255, 0, 255, 0.05);
    }

    .role-hoca {
        color: #818cf8;
        border-color: rgba(129, 140, 248, 0.3);
        background: rgba(129, 140, 248, 0.05);
    }

    .role-memur {
        color: #00f3ff;
        border-color: rgba(0, 243, 255, 0.3);
        background: rgba(0, 243, 255, 0.05);
    }

    .role-ogrenci {
        color: #fbbf24;
        border-color: rgba(251, 191, 36, 0.3);
        background: rgba(251, 191, 36, 0.05);
    }

    .btn-cyber {
        font-family: 'Orbitron';
        font-size: 0.7rem;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
        transition: 0.3s;
        font-weight: bold;
    }

    .btn-terminate {
        color: #ff3131;
        border: 1px solid rgba(255, 49, 49, 0.4);
        background: rgba(255, 49, 49, 0.05);
    }

        .btn-terminate:hover {
            background: #ff3131;
            color: #fff;
            box-shadow: 0 0 15px rgba(255, 49, 49, 0.5);
        }

    .status-active {
        color: #4ade80;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .status-active::before {
            content: "";
            width: 6px;
            height: 6px;
            background: #4ade80;
            border-radius: 50%;
            box-shadow: 0 0 8px #4ade80;
        }
</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid var(--accent); padding-left: 15px;">
        <h2 style="margin:0;">KULLANICI YÖNETİMİ</h2>
        <p style="color: var(--text-muted); font-size: 0.8rem; margin-top: 5px;">Kullanıcı veri tabanı ve yetkililer.</p>
    </div>
</div>

<div class="security-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th>ERİSİM KİMLİGİ</th>
                <th>KULLANICI ADI</th>
                <th>YETKİ SEVİYESİ</th>
                <th>DURUM</th>
                <th style="text-align:right">İSLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td style="font-weight: 600; color: #fff;">@user.AdSoyad.ToUpper()</td>
                    <td style="color: #94a3b8; font-family: monospace;">@user.KullaniciAdi</td>
                    <td>
                        <span class="role-badge role-@user.Rol.ToLower().Trim()">
                            @user.Rol
                        </span>
                    </td>
                    <td>
                        <span class="status-active">ONLINE</span>
                    </td>
                    <td style="text-align:right">
                        <a href="/Kullanici/Sil/@user.AppUserId"
                           class="btn-cyber btn-terminate"
                           onclick="return confirm('DİKKAT: BU KULLANICININ TÜM ERİŞİM YETKİLERİ İPTAL EDİLECEK. ONAYLIYOR MUSUNUZ?')">
                            ERISIMI KES
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>