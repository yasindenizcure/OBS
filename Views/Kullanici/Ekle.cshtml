@model DenemeDers.Entity.AppUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistem Kayıt // Yeni Erişim Tanımla</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --cyan: #00f3ff;
            --magenta: #ff00ff;
            --bg-dark: #050505;
            --border: rgba(0, 243, 255, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: var(--bg-dark);
            background-image: radial-gradient(circle at center, #101015 0%, #000 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            overflow: hidden;
        }

            body::before {
                content: "";
                position: absolute;
                width: 200%;
                height: 200%;
                background-image: linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
                background-size: 50px 50px;
                transform: perspective(500px) rotateX(60deg);
                z-index: -1;
            }

        .cyber-card {
            width: 100%;
            max-width: 450px;
            padding: 40px;
            background: rgba(10, 10, 15, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border);
            position: relative;
            clip-path: polygon(10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%, 0 10%);
        }

            .cyber-card::before {
                content: "KAYIT EKRANI";
                position: absolute;
                top: 10px;
                left: 50px;
                font-family: 'Orbitron';
                font-size: 9px;
                color: var(--cyan);
                letter-spacing: 1px;
            }

        h2 {
            font-family: 'Orbitron';
            color: var(--cyan);
            text-align: center;
            margin-bottom: 30px;
            text-shadow: 0 0 10px var(--cyan);
            font-size: 1.4rem;
            letter-spacing: 2px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            color: var(--cyan);
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        input, select {
            width: 100%;
            padding: 12px;
            background: rgba(0, 243, 255, 0.05);
            border: 1px solid var(--border);
            color: #fff;
            font-family: 'Rajdhani';
            font-size: 1.1rem;
            transition: 0.3s;
        }

            input:focus, select:focus {
                outline: none;
                border-color: var(--cyan);
                background: rgba(0, 243, 255, 0.1);
                box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
            }

        option {
            background: #0a0a0f;
            color: #fff;
        }

        .btn-submit {
            width: 100%;
            padding: 15px;
            background: transparent;
            border: 1px solid var(--cyan);
            color: var(--cyan);
            font-family: 'Orbitron';
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
            transition: 0.4s;
            letter-spacing: 2px;
        }

            .btn-submit:hover {
                background: var(--cyan);
                color: #000;
                box-shadow: 0 0 25px var(--cyan);
            }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #64748b;
            text-decoration: none;
            font-family: 'Orbitron';
            font-size: 0.7rem;
            transition: 0.3s;
        }

            .back-link:hover {
                color: #fff;
            }
    </style>
</head>
<body>

    <div class="cyber-card">
        <h2>ERİŞİM_TANIMLA</h2>

        <form asp-action="Ekle" method="post">
            <div class="form-group">
                <label><i class="fas fa-id-card"></i> PERSONEL_AD_SOYAD</label>
                <input type="text" asp-for="AdSoyad" placeholder="Örn: Ahmet Yılmaz" required />
            </div>

            <div class="form-group">
                <label><i class="fas fa-user"></i> KULLANICI_KODU</label>
                <input type="text" asp-for="KullaniciAdi" placeholder="Sistem giriş adı" required />
            </div>

            <div class="form-group">
                <label><i class="fas fa-lock"></i> ERİŞİM_ŞİFRESİ</label>
                <input type="password" asp-for="Sifre" placeholder="********" required />
            </div>

            <div class="form-group">
                <label><i class="fas fa-shield-alt"></i> YETKİ_DÜZEYİ</label>
                <select asp-for="Rol">
                    <option value="hoca">HOCA (AKADEMİK)</option>
                    <option value="memur">MEMUR (İDARİ)</option>
                    <option value="ogrenci">ÖĞRENCİ</option>
                </select>
            </div>

            <button type="submit" class="btn-submit">VERİYİ_ONAYLA()</button>
        </form>

        <a href="/Kullanici/Index" class="back-link">İPTAL ET VE GERİ DÖN</a>
    </div>

</body>
</html>