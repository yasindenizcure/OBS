@model DenemeDers.Entity.Not
@{
    ViewData["Title"] = "Not Güncelleme Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .not-update-container {
        max-width: 500px;
        margin: 40px auto;
        background: rgba(16, 18, 27, 0.8);
        border: 1px solid rgba(99, 102, 241, 0.3);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
    }

    .form-header {
        border-bottom: 1px solid rgba(99, 102, 241, 0.1);
        margin-bottom: 30px;
        padding-bottom: 20px;
        text-align: center;
    }

        .form-header h2 {
            font-family: 'Orbitron', sans-serif;
            color: #818cf8;
            font-size: 1.4rem;
            letter-spacing: 2px;
        }

    .info-tag {
        display: inline-block;
        background: rgba(99, 102, 241, 0.1);
        color: #818cf8;
        padding: 4px 12px;
        border-radius: 6px;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        margin-top: 10px;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #64748b;
        margin-bottom: 8px;
        text-transform: uppercase;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        font-family: inherit;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #818cf8;
            box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
            outline: none;
        }

    .btn-cyber-update {
        width: 100%;
        padding: 15px;
        background: #6366f1;
        color: #fff;
        border: none;
        border-radius: 12px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 20px;
    }

        .btn-cyber-update:hover {
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
            transform: translateY(-2px);
        }
</style>

<div class="not-update-container">
    <div class="form-header">
        <h2>Not Güncelleme Paneli</h2>
    </div>

    <form method="post">
        @Html.HiddenFor(x => x.NotId)
        @Html.HiddenFor(x => x.OgrenciId)
        @Html.HiddenFor(x => x.DersId)
        @Html.HiddenFor(x => x.OgretimGorevlisiId)

        <div class="form-group" style="margin-bottom: 20px;">
            <label class="form-label">ÖGRENCI</label>
            <input type="text" class="form-control" value="@Model.Ogrenci?.Ad @Model.Ogrenci?.Soyad" readonly />
        </div>

        <div class="form-group" style="margin-bottom: 20px;">
            <label class="form-label">Ders</label>
            <input type="text" class="form-control" value="@Model.Ders?.DersAdi" readonly />
        </div>

        <div style="display:flex; gap:15px;">
            <div class="form-group" style="flex:1">
                <label class="form-label">VIZE NOTU</label>
                <input type="number" name="VizeNotu" class="form-control" value="@Model.VizeNotu" min="0" max="100" required />
            </div>
            <div class="form-group" style="flex:1">
                <label class="form-label">FINAL NOTU</label>
                <input type="number" name="FinalNotu" class="form-control" value="@Model.FinalNotu" min="0" max="100" required />
            </div>
        </div>

        <button type="submit" class="btn-cyber-update">DEGISIKLIKLERI KAYDET</button>
        <a href="/Not/NotIndex" style="display:block; text-align:center; margin-top:15px; color:#64748b; text-decoration:none; font-size:11px; font-family:'Orbitron'">IPTAL ET VE GERI DÖN</a>
    </form>
</div>