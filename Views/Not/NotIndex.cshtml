@model List<DenemeDers.Entity.Not>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Not Paneli</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #f8fafc;
            --card: #ffffff;
            --text: #1e293b;
            --primary: #4f46e5;
            --danger: #ef4444;
            --success: #10b981;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: var(--bg);
            color: var(--text);
            padding: 40px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: var(--card);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.02);
        }

        .header-area {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        h1 {
            margin: 0;
            font-size: 1.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            padding: 15px;
            color: #64748b;
            font-size: 0.75rem;
            text-transform: uppercase;
            border-bottom: 1px solid #f1f5f9;
        }

        td {
            padding: 18px 15px;
            border-bottom: 1px solid #f8fafc;
            font-size: 0.95rem;
        }

        /* Ortalama sayısı için stil */
        .avg-text {
            font-weight: 700;
            color: var(--text);
        }
        .letter-badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 8px;
            font-weight: 800;
            font-size: 0.8rem;
            min-width: 40px;
            text-align: center;
            border: 1px solid rgba(0,0,0,0.05);
        }

        .btn-back {
            text-decoration: none;
            color: #64748b;
            padding: 10px 18px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 8px;
            border: 1px solid #e2e8f0;
            transition: all 0.2s ease;
        }

            .btn-back:hover {
                background: #f1f5f9;
                color: var(--primary);
                border-color: var(--primary);
            }
        .btn-add {
            text-decoration: none;
            background: var(--primary);
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            transition: opacity 0.2s;
        }

            .btn-add:hover {
                opacity: 0.9;
            }

        .actions {
            display: flex;
            gap: 12px;
            justify-content: flex-end;
        }

        .action-link {
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 600;
            transition: color 0.2s;
        }

        .edit-link {
            color: var(--primary);
        }

        .delete-link {
            color: var(--danger);
        }

        .logout-btn {
            text-decoration: none;
            color: var(--danger);
            border: 2px solid var(--danger);
            padding: 8px 16px;
            border-radius: 10px;
            font-weight: 700;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="header-area">
            <h1>Not Yönetimi</h1>
            <div style="display: flex; gap: 15px; align-items: center;">
                <a href="/Not/NotEkle" class="btn-add">+ Yeni Giriş</a>
                <a href="/Dashboard/Index" class="btn-back">Geri Dön</a>
                <a href="/Login/Logout" class="logout-btn">
                    GÜVENLİ ÇIKIŞ
                </a>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Öğrenci</th>
                    <th>Ders</th>
                    <th>Hoca</th>
                    <th style="text-align:center">Vize</th>
                    <th style="text-align:center">Final</th>
                    <th style="text-align:center">Ortalama</th>
                    <th style="text-align:center">Harf</th>
                    <th style="text-align:right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</strong></td>
                        <td>@item.Ders?.DersAdi</td>
                        <td>@item.OgretimGorevlisi?.Ad @item.OgretimGorevlisi?.Soyad</td>
                        <td style="text-align:center">@item.VizeNotu</td>
                        <td style="text-align:center">@item.FinalNotu</td>

                        <td style="text-align:center">
                            <span class="avg-text">@item.Ortalama.ToString("0.##")</span>
                        </td>

                        <td style="text-align:center">
                            @{
                                double ort = item.Ortalama;
                                string harf = "";
                                string bgColor = "";
                                string textColor = "";

                                if (ort >= 90) { harf = "AA"; bgColor = "#dcfce7"; textColor = "#166534"; }
                                else if (ort >= 80) { harf = "BA"; bgColor = "#f0fdf4"; textColor = "#16a34a"; }
                                else if (ort >= 70) { harf = "BB"; bgColor = "#f0fdfa"; textColor = "#0d9488"; }
                                else if (ort >= 60) { harf = "CB"; bgColor = "#fffbeb"; textColor = "#b45309"; }
                                else if (ort >= 50) { harf = "CC"; bgColor = "#fff7ed"; textColor = "#c2410c"; }
                                else { harf = "FF"; bgColor = "#fee2e2"; textColor = "#991b1b"; }
                            }
                            <span class="letter-badge" style="background-color: @bgColor; color: @textColor;">
                                @harf
                            </span>
                        </td>

                        <td style="text-align:right">
                            <div class="actions">
                                <a href="/Not/NotGuncelle/@item.NotId" class="action-link edit-link">Düzenle</a>
                                <a href="/Not/NotSil/@item.NotId"
                                   class="action-link delete-link"
                                   onclick="return confirm('Bu not kaydını silmek istediğinize emin misiniz?')">Sil</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>