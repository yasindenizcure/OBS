@model List<DenemeDers.Entity.Not>

@{
    ViewData["Title"] = "Not Görüntüleme Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .grade-card {
        background: rgba(16, 18, 27, 0.6);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 18px;
            color: #818cf8;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            border-bottom: 2px solid rgba(99, 102, 241, 0.2);
            text-transform: uppercase;
        }

        .cyber-table td {
            padding: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            font-size: 0.95rem;
        }

        .cyber-table tr:hover td {
            background: rgba(99, 102, 241, 0.03);
        }

    .letter-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-family: 'Orbitron';
        font-weight: 800;
        font-size: 0.75rem;
        min-width: 45px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-not-add {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid #818cf8;
        color: #818cf8;
    }

        .btn-not-add:hover {
            background: #818cf8;
            color: #000;
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.4);
        }

    .action-link {
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        margin-left: 10px;
        transition: 0.2s;
    }

    .edit-link {
        color: #00e5ff;
    }

        .edit-link:hover {
            text-shadow: 0 0 8px #00e5ff;
        }

    .delete-link {
        color: #ff3131;
    }

        .delete-link:hover {
            text-shadow: 0 0 8px #ff3131;
        }

</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid #818cf8; padding-left: 15px;">
        <h2 style="font-family:'Orbitron'; color:#fff; letter-spacing: 2px; margin: 0;">NOT MERKEZİ</h2>
        <p style="color: #64748b; font-size: 0.8rem; margin-top: 5px;">Öğrencilerin akademik müfredatta aldığı notlar ve harf notu hesaplamaları.</p>
    </div>
    <a href="/Not/NotEkle" class="btn-cyber btn-not-add">
        <i class="fas fa-plus-circle"></i> YENİ NOT GİRİSİ
    </a>
</div>

<div class="grade-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th>ÖGRENCI</th>
                <th>DERS ADI</th>
                <th>SORUMLU HOCA</th>
                <th style="text-align:center">VIZE</th>
                <th style="text-align:center">FINAL</th>
                <th style="text-align:center">ORTALAMA</th>
                <th style="text-align:center">HARF NOTU</th>
                <th style="text-align:right">ISLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-weight: 600; color: #fff;">@item.Ogrenci?.Ad @item.Ogrenci?.Soyad</td>
                    <td style="color: #94a3b8;">@item.Ders?.DersAdi</td>
                    <td style="font-size: 0.85rem;">@item.OgretimGorevlisi?.Ad @item.OgretimGorevlisi?.Soyad</td>
                    <td style="text-align:center">@item.VizeNotu</td>
                    <td style="text-align:center">@item.FinalNotu</td>
                    <td style="text-align:center">
                        <span style="color: #818cf8; font-weight: bold; font-family: 'Orbitron';">@item.Ortalama.ToString("0.##")</span>
                    </td>
                    <td style="text-align:center">
                        @{
                            double ort = item.Ortalama;
                            string harf = "";
                            string shadowColor = "";
                            string textColor = "";

                            if (ort >= 90) { harf = "AA"; shadowColor = "rgba(16, 185, 129, 0.4)"; textColor = "#10b981"; }
                            else if (ort >= 80) { harf = "BA"; shadowColor = "rgba(16, 185, 129, 0.3)"; textColor = "#34d399"; }
                            else if (ort >= 70) { harf = "BB"; shadowColor = "rgba(20, 184, 166, 0.3)"; textColor = "#2dd4bf"; }
                            else if (ort >= 60) { harf = "CB"; shadowColor = "rgba(245, 158, 11, 0.3)"; textColor = "#fbbf24"; }
                            else if (ort >= 50) { harf = "CC"; shadowColor = "rgba(249, 115, 22, 0.3)"; textColor = "#fb923c"; }
                            else { harf = "FF"; shadowColor = "rgba(239, 68, 68, 0.4)"; textColor = "#f87171"; }
                        }
                        <span class="letter-badge" style="border: 1px solid @textColor; color: @textColor; box-shadow: 0 0 10px @shadowColor;">
                            @harf
                        </span>
                    </td>
                    <td style="text-align:right">
                        <a href="/Not/NotGuncelle/@item.NotId" class="action-link edit-link" title="Düzenle">
                            <i class="fas fa-pen-nib"></i>
                        </a>
                        <a href="/Not/NotSil/@item.NotId" class="action-link delete-link" title="Sil"
                           onclick="return confirm('Bu not kaydı kalıcı olarak silinecek. Emin misiniz?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>