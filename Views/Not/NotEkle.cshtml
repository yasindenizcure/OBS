@model DenemeDers.Entity.Not
@{
    ViewData["Title"] = "Not Giriş Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;600;700&display=swap');

    .not-form-container {
        max-width: 500px;
        margin: 40px auto;
        background: rgba(13, 14, 20, 0.95);
        border: 1px solid rgba(99, 102, 241, 0.2);
        border-radius: 16px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 0 40px rgba(99, 102, 241, 0.1);
        position: relative;
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
        border-bottom: 1px solid rgba(99, 102, 241, 0.1);
        padding-bottom: 20px;
    }

        .form-header h2 {
            font-family: 'Orbitron', sans-serif;
            color: #818cf8;
            font-size: 1.4rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin: 0;
            text-shadow: 0 0 10px rgba(99, 102, 241, 0.4);
        }

    .form-group {
        margin-bottom: 22px;
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #818cf8;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    .form-control-cyber {
        width: 100%;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-left: 3px solid #6366f1;
        border-radius: 4px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .form-control-cyber:focus {
            outline: none;
            border-color: #818cf8;
            background: rgba(99, 102, 241, 0.05);
            box-shadow: 0 0 20px rgba(99, 102, 241, 0.15);
        }

    select.form-control-cyber option {
        background-color: #0d0e14;
        color: #818cf8;
        font-family: 'Rajdhani', sans-serif;
    }

    input[readonly] {
        background: rgba(99, 102, 241, 0.03);
        border-left: 3px solid #475569;
        color: #64748b;
        cursor: not-allowed;
    }

    .btn-cyber-submit {
        width: 100%;
        padding: 16px;
        background: transparent;
        border: 1px solid #6366f1;
        color: #6366f1;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.4s;
        margin-top: 15px;
        letter-spacing: 2px;
        font-size: 0.85rem;
    }

        .btn-cyber-submit:hover {
            background: #6366f1;
            color: #000;
            box-shadow: 0 0 30px rgba(99, 102, 241, 0.5);
        }

    .btn-vazgec {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #475569;
        text-decoration: none;
        font-size: 0.7rem;
        font-family: 'Orbitron';
        letter-spacing: 1px;
        transition: 0.3s;
    }

        .btn-vazgec:hover {
            color: #ff3131;
        }

    .error-box {
        background: rgba(255, 49, 49, 0.1);
        border-left: 4px solid #ff3131;
        color: #ff3131;
        padding: 12px;
        border-radius: 4px;
        margin-bottom: 25px;
        font-size: 0.8rem;
        font-family: 'Rajdhani';
        font-weight: 600;
    }
</style>

<div class="not-form-container">
    <div class="form-header">
        <h2>VERİ GİRİŞ TERMİNALİ</h2>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="error-box">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="NotEkle" method="post">
        <input type="hidden" name="OgretimGorevlisiId" value="@ViewBag.HocaId" />

        <div class="form-group">
            <label class="form-label">Sorumlu Akademisyen</label>
            <input type="text" class="form-control-cyber" value="@ViewBag.Unvan @ViewBag.HocaAdSoyad" readonly />
        </div>

        <div class="form-group">
            <label class="form-label">Ders Adı</label>
            <select asp-for="DersId" class="form-control-cyber"
                    asp-items="ViewBag.Dersler"
                    onchange="window.location.href='/Not/NotEkle?dersId=' + this.value">
                <option value="">Lütfen Ders Seçin...</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Hedef Ögrenci</label>
            <select asp-for="OgrenciId" class="form-control-cyber" asp-items="ViewBag.Ogrenciler">
                <option value="">-- Lütfen önce ders sonra öğrenci seçiniz.. --</option>
            </select>
        </div>

        <div style="display:flex; gap:15px;">
            <div class="form-group" style="flex:1">
                <label class="form-label">VIZE PUANI</label>
                <input type="number" name="VizeNotu" class="form-control-cyber" min="0" max="100" required value="@(Model?.VizeNotu ?? 0)" />
            </div>
            <div class="form-group" style="flex:1">
                <label class="form-label">FINAL PUANI</label>
                <input type="number" name="FinalNotu" class="form-control-cyber" min="0" max="100" required value="@(Model?.FinalNotu ?? 0)" />
            </div>
        </div>

        <button type="submit" class="btn-cyber-submit">VERİYİ VERİTABANINA EKLE</button>

        <a href="/Not/NotIndex" class="btn-vazgec">
            <i class="fas fa-undo"></i> İSLEMİ İPTAL ET VE DÖN
        </a>
    </form>
</div>