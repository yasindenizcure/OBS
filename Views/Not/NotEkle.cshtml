@model DenemeDers.Entity.Not
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Yeni Not Girişi</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            background: white;
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 480px;
        }

        h1 {
            font-size: 1.4rem;
            margin-bottom: 25px;
            text-align: center;
            color: #1e293b;
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            display: block;
            font-size: 0.75rem;
            font-weight: 700;
            margin-bottom: 6px;
            color: #64748b;
            text-transform: uppercase;
        }

        input, select {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            outline: none;
            box-sizing: border-box;
            font-family: inherit;
            font-size: 0.9rem;
        }

            input:read-only {
                background-color: #f8fafc;
                color: #4f46e5; 
                font-weight: 600;
                cursor: not-allowed;
                border-style: dashed;
            }

        .btn-save {
            width: 100%;
            background: #4f46e5;
            color: white;
            border: none;
            padding: 14px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 15px;
            transition: 0.3s;
        }

            .btn-save:hover {
                background: #4338ca;
            }

        .row {
            display: flex;
            gap: 15px;
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>Yeni Not Girişi</h1>
        <form method="post" action="/Not/NotEkle">

            <div class="form-group">
                <label>Öğrenci</label>
                <select name="OgrenciId" required>
                    <option value="">Öğrenci seçiniz...</option>
                    @foreach (var item in (SelectList)ViewBag.Ogrenciler)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Ders</label>
                <select id="dersSecimi" name="DersId" required onchange="hocaEsle()">
                    <option value="">Ders seçiniz...</option>
                    @foreach (var item in (SelectList)ViewBag.Dersler)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Sorumlu Öğretim Görevlisi</label>
                <input type="text" id="hocaGosterge" readonly placeholder="..." />

                <input type="hidden" id="hocaId" name="OgretimGorevlisiId" />
            </div>

            <div class="row">
                <div class="form-group" style="flex: 1;">
                    <label>Vize Notu</label>
                    <input type="number" name="VizeNotu" min="0" max="100" required />
                </div>
                <div class="form-group" style="flex: 1;">
                    <label>Final Notu</label>
                    <input type="number" name="FinalNotu" min="0" max="100" required />
                </div>
            </div>

            <button type="submit" class="btn-save">Notu Kaydet</button>
            <a href="/Not/NotIndex" style="display:block; text-align:center; margin-top:15px; color:#94a3b8; text-decoration:none; font-size:0.8rem;">Vazgeç ve Listeye Dön</a>
        </form>
    </div>

    <script>
        const dersHocaHaritasi = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DersHocaListesi));
        console.log("Gelen Veri:", dersHocaHaritasi);

        function hocaEsle() {
            const secilenDersId = document.getElementById("dersSecimi").value;
            const hocaMetinKutusu = document.getElementById("hocaGosterge");
            const hocaGizliIdKutusu = document.getElementById("hocaId");

            if (!secilenDersId) {
                hocaMetinKutusu.value = "";
                hocaGizliIdKutusu.value = "";
                return;
            }

            const sonuc = dersHocaHaritasi.find(x => x.dersId == secilenDersId || x.DersId == secilenDersId);

            if (sonuc) {
                hocaMetinKutusu.value = sonuc.hocaAdSoyad || sonuc.HocaAdSoyad;
                hocaGizliIdKutusu.value = sonuc.hocaId || sonuc.HocaId;
            } else {
                hocaMetinKutusu.value = "Hoca bulunamadı";
                hocaGizliIdKutusu.value = "";
            }
        }

    </script>
</body>
</html>