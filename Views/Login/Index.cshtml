@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Terminali</title>

    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Space+Grotesk:wght@300;500;700&family=Rajdhani:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --cyan: #00f3ff;
            --magenta: #ff00ff;
            --bg-dark: #020308;
            --panel-bg: rgba(8, 10, 15, 0.95);
            --border: rgba(0, 243, 255, 0.15);
            --error: #ff003c;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Space Grotesk', sans-serif;
            background-color: var(--bg-dark);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            overflow: hidden;
            position: relative;
        }
            body::before {
                content: "";
                position: absolute;
                width: 200%;
                height: 200%;
                background-image: linear-gradient(rgba(0, 243, 255, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 243, 255, 0.02) 1px, transparent 1px);
                background-size: 50px 50px;
                transform: perspective(500px) rotateX(45deg);
                z-index: -1;
                animation: gridMove 30s linear infinite;
            }

        @@keyframes gridMove {
            from {
                background-position: 0 0;
            }

            to {
                background-position: 0 100px;
            }
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            padding: 50px 40px;
            background: var(--panel-bg);
            backdrop-filter: blur(15px);
            border: 1px solid var(--border);
            position: relative;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
            clip-path: polygon(0 0, 90% 0, 100% 10%, 100% 100%, 10% 100%, 0 90%);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

            .header h2 {
                font-family: 'Orbitron', sans-serif;
                font-size: 1.6rem;
                color: var(--cyan);
                text-shadow: 0 0 15px rgba(0, 243, 255, 0.5);
                letter-spacing: 4px;
                text-transform: uppercase;
            }

            .header p {
                font-size: 0.75rem;
                color: #64748b;
                letter-spacing: 2px;
                margin-top: 8px;
                font-family: 'Orbitron';
            }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                font-family: 'Orbitron';
                font-size: 0.65rem;
                margin-bottom: 10px;
                color: var(--cyan);
                text-transform: uppercase;
                letter-spacing: 2px;
                opacity: 0.8;
            }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

            .input-wrapper i {
                position: absolute;
                left: 18px;
                color: var(--cyan);
                opacity: 0.5;
                font-size: 0.9rem;
            }

        input {
            width: 100%;
            padding: 15px 15px 15px 50px;
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-bottom: 2px solid var(--border);
            color: #fff;
            font-family: 'Rajdhani';
            font-size: 1.2rem;
            letter-spacing: 1px;
            transition: 0.3s;
        }

            input:focus {
                outline: none;
                border-bottom-color: var(--cyan);
                background: rgba(0, 243, 255, 0.03);
                box-shadow: 0 5px 15px rgba(0, 243, 255, 0.05);
            }

        .btn-submit {
            width: 100%;
            padding: 16px;
            background: transparent;
            border: 1px solid var(--cyan);
            color: var(--cyan);
            font-family: 'Orbitron', sans-serif;
            font-size: 0.85rem;
            font-weight: 700;
            cursor: pointer;
            transition: 0.4s;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-top: 10px;
        }

            .btn-submit:hover {
                background: var(--cyan);
                color: #000;
                box-shadow: 0 0 30px rgba(0, 243, 255, 0.4);
            }

        .error-container {
            background: rgba(255, 0, 60, 0.1);
            border-left: 4px solid var(--error);
            color: var(--error);
            padding: 12px;
            font-family: 'Rajdhani';
            font-weight: 700;
            font-size: 0.9rem;
            margin-bottom: 25px;
            text-align: left;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            font-size: 0.6rem;
            color: #334155;
            font-family: 'Orbitron';
            letter-spacing: 2px;
            text-transform: uppercase;
        }
        .corner {
            position: absolute;
            width: 15px;
            height: 15px;
            border: 2px solid var(--cyan);
            opacity: 0.3;
        }

        .top-left {
            top: 15px;
            left: 15px;
            border-right: 0;
            border-bottom: 0;
        }

        .bottom-right {
            bottom: 15px;
            right: 15px;
            border-left: 0;
            border-top: 0;
        }

    </style>
</head>
<body>

    <div class="login-card">
        <div class="corner top-left"></div>
        <div class="corner bottom-right"></div>

        <div class="header">
            <h2>Okul Bilgi Sistemi</h2>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error-container">
                <i class="fa-solid fa-shield-virus"></i>
                <span>HATA: @ViewBag.Error.ToString().ToUpper()</span>
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label>KULLANICI ADI</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-user-secret"></i>
                    <input type="text" name="ad" placeholder="ERİŞİM_KODU" required autocomplete="off" />
                </div>
            </div>

            <div class="form-group">
                <label>SIFRE</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-fingerprint"></i>
                    <input type="password" name="sifre" placeholder="********" required />
                </div>
            </div>

            <button type="submit" class="btn-submit">GIRIS YAP</button>
        </form>

        <div class="footer-text">
            &copy; @DateTime.Now.Year // Okul_Bilgi_Sistemi
        </div>
    </div>

</body>
</html>