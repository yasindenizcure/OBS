@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Ekranı</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --cyan: #00f3ff;
            --magenta: #ff00ff;
            --bg-dark: #050505;
            --glass: rgba(0, 243, 255, 0.05);
            --border: rgba(0, 243, 255, 0.2);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: var(--bg-dark);
            background-image: radial-gradient(circle at 20% 30%, rgba(0, 243, 255, 0.1) 0%, transparent 40%), radial-gradient(circle at 80% 70%, rgba(255, 0, 255, 0.1) 0%, transparent 40%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            overflow: hidden;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                width: 200%;
                height: 200%;
                background-image: linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
                background-size: 40px 40px;
                transform: perspective(500px) rotateX(60deg);
                z-index: -1;
                animation: gridMove 20s linear infinite;
            }

       @@keyframes gridMove {
            from

        {
            background-position: 0 0;
        }

        to {
            background-position: 0 40px;
        }

        }

        .login-card {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background: rgba(10, 10, 15, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid var(--border);
            border-radius: 4px;
            box-shadow: 0 0 30px rgba(0, 243, 255, 0.1);
            position: relative;
            clip-path: polygon(0 10%, 10% 0, 100% 0, 100% 90%, 90% 100%, 0 100%);
        }
            .login-card::after {
                content: "";
                position: absolute;
                bottom: 5px;
                right: 20px;
                font-family: 'Orbitron';
                font-size: 8px;
                color: var(--cyan);
                opacity: 0.5;
            }

        .header {
            text-align: center;
            margin-bottom: 35px;
        }

            .header h2 {
                font-family: 'Orbitron', sans-serif;
                font-size: 1.8rem;
                color: var(--cyan);
                text-shadow: 0 0 10px var(--cyan);
                letter-spacing: 2px;
                text-transform: uppercase;
            }

            .header p {
                font-size: 0.8rem;
                color: #94a3b8;
                letter-spacing: 1px;
                margin-top: 5px;
            }

        .form-group {
            margin-bottom: 25px;
        }

            .form-group label {
                display: block;
                font-family: 'Orbitron';
                font-size: 0.7rem;
                margin-bottom: 8px;
                color: var(--cyan);
                text-transform: uppercase;
            }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

            .input-wrapper i {
                position: absolute;
                left: 15px;
                color: var(--cyan);
                opacity: 0.7;
                font-size: 1rem;
            }

        input {
            width: 100%;
            padding: 14px 15px 14px 45px;
            background: rgba(0, 243, 255, 0.05);
            border: 1px solid var(--border);
            border-radius: 0;
            color: #fff;
            font-family: 'Rajdhani';
            font-size: 1.1rem;
            letter-spacing: 1px;
            transition: all 0.3s;
        }

            input:focus {
                outline: none;
                border-color: var(--cyan);
                background: rgba(0, 243, 255, 0.1);
                box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
            }

        .btn-submit {
            width: 100%;
            padding: 15px;
            background: transparent;
            border: 1px solid var(--cyan);
            color: var(--cyan);
            font-family: 'Orbitron', sans-serif;
            font-size: 0.9rem;
            font-weight: 700;
            cursor: pointer;
            transition: 0.4s;
            text-transform: uppercase;
            letter-spacing: 2px;
            position: relative;
            overflow: hidden;
        }

            .btn-submit:hover {
                background: var(--cyan);
                color: #000;
                box-shadow: 0 0 20px var(--cyan);
            }

        .error-container {
            background: rgba(255, 0, 60, 0.1);
            border: 1px solid #ff003c;
            color: #ff003c;
            padding: 12px;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            margin-bottom: 20px;
            text-align: center;
            clip-path: polygon(5% 0, 100% 0, 95% 100%, 0% 100%);
        }

        .footer-text {
            text-align: center;
            margin-top: 25px;
            font-size: 0.7rem;
            color: #475569;
            font-family: 'Orbitron';
            letter-spacing: 1px;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="header">
            <h2>Giriş_Terminali</h2>
            <p>// Kimlik Doğrulama Gerekli</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error-container">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <span>ERİŞİM_REDDEDİLDİ: @ViewBag.Error</span>
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label>Kullanıcı_ID</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-terminal"></i>
                    <input type="text" name="ad" placeholder="USER_NAME" required autocomplete="off" />
                </div>
            </div>

            <div class="form-group">
                <label>Erişim_Şifresi</label>
                <div class="input-wrapper">
                    <i class="fa-solid fa-key"></i>
                    <input type="password" name="sifre" placeholder="********" required />
                </div>
            </div>

            <button type="submit" class="btn-submit">Sisteme_Bağlan</button>
        </form>

        <div class="footer-text">
            &copy; @DateTime.Now.Year Okul Bilgi Sistemi
        </div>
    </div>

</body>
</html>