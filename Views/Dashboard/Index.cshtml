@using System.Security.Claims
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Komuta Merkezi // Kontrol Paneli</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --cyan: #00f3ff;
            --magenta: #ff00ff;
            --gold: #ffcc00;
            --red: #ff3131;
            --amber: #ff8e00;
            --bg-dark: #0a0b10;
            --card-bg: rgba(16, 18, 27, 0.7);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: var(--bg-dark);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            overflow-x: hidden;
            position: relative;
        }

        .bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 30%, rgba(0, 243, 255, 0.05) 0%, transparent 40%), radial-gradient(circle at 80% 70%, rgba(255, 0, 255, 0.05) 0%, transparent 40%);
            z-index: -1;
        }

        .cyber-grid {
            position: fixed;
            width: 200%;
            height: 200%;
            background-image: linear-gradient(rgba(0, 243, 255, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 243, 255, 0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            transform: perspective(1000px) rotateX(60deg) translateY(-100px);
            bottom: -50%;
            z-index: -1;
            animation: moveGrid 20s linear infinite;
        }

        @@keyframes moveGrid {
            from {
                background-position: 0 0;
            }

            to {
                background-position: 0 50px;
            }
        }

        .status-bar {
            position: absolute;
            top: 0;
            width: 100%;
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(0, 0, 0, 0.5);
            border-bottom: 1px solid rgba(0, 243, 255, 0.2);
            backdrop-filter: blur(10px);
            z-index: 100;
        }

        .system-info {
            font-family: 'Orbitron';
            font-size: 0.8rem;
            color: var(--cyan);
            letter-spacing: 2px;
        }

        .cyber-logout {
            text-decoration: none;
            color: var(--red);
            border: 1px solid var(--red);
            padding: 8px 20px;
            font-family: 'Orbitron';
            font-size: 0.7rem;
            transition: 0.3s;
            background: rgba(255, 49, 49, 0.05);
            clip-path: polygon(10% 0, 100% 0, 90% 100%, 0% 100%);
        }

            .cyber-logout:hover {
                background: var(--red);
                color: #000;
                box-shadow: 0 0 20px var(--red);
            }

        .header-section {
            text-align: center;
            margin-bottom: 40px;
            margin-top: 50px;
        }

        h1 {
            font-family: 'Orbitron';
            font-size: 3rem;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 6px;
            background: linear-gradient(to bottom, #fff 0%, var(--cyan) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 10px rgba(0, 243, 255, 0.5));
        }

        .role-badge {
            display: inline-block;
            margin-top: 10px;
            padding: 5px 15px;
            background: rgba(0, 243, 255, 0.1);
            border-left: 3px solid var(--cyan);
            font-family: 'Orbitron';
            font-size: 0.8rem;
            color: var(--cyan);
        }

        .dashboard-container {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 15px;
            width: 98%;
            max-width: 1400px;
            padding: 10px;
            perspective: 1000px;
        }

        .card {
            position: relative;
            height: 280px;
            background: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: #fff;
            transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

            .card:hover {
                transform: translateY(-10px);
                border-color: var(--active-color);
                box-shadow: 0 0 25px var(--active-shadow);
            }

            .card i {
                font-size: 2.5rem;
                margin-bottom: 15px;
                transition: 0.3s;
                filter: drop-shadow(0 0 8px var(--active-color));
            }

            .card h2 {
                font-family: 'Orbitron';
                font-size: 0.9rem;
                margin-bottom: 10px;
                letter-spacing: 1.5px;
                color: var(--active-color);
            }

            .card p {
                font-size: 0.75rem;
                text-align: center;
                color: #999;
                padding: 0 10px;
                line-height: 1.3;
            }

        .c-student {
            --active-color: var(--cyan);
            --active-shadow: rgba(0, 243, 255, 0.3);
        }

            .c-student i {
                color: var(--cyan);
            }

        .c-teacher {
            --active-color: var(--magenta);
            --active-shadow: rgba(255, 0, 255, 0.3);
        }

            .c-teacher i {
                color: var(--magenta);
            }

        .c-lesson {
            --active-color: var(--gold);
            --active-shadow: rgba(255, 204, 0, 0.3);
        }

            .c-lesson i {
                color: var(--gold);
            }

        .c-dept {
            --active-color: var(--amber);
            --active-shadow: rgba(255, 142, 0, 0.3);
        }

            .c-dept i {
                color: var(--amber);
            }

        .c-users {
            --active-color: var(--red);
            --active-shadow: rgba(255, 49, 49, 0.3);
        }

            .c-users i {
                color: var(--red);
            }

        .scanline {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: rgba(0, 243, 255, 0.03);
            z-index: 1000;
            pointer-events: none;
            animation: scan 4s linear infinite;
        }

        @@keyframes scan {
            0% {
                top: -5px;
            }

            100% {
                top: 100%;
            }
        }

        @@media (max-width: 1100px) {
            .dashboard-container {
                grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            }
        }

        @@media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            body {
                overflow-y: auto;
            }
        }
    </style>
</head>
<body>
    <div class="bg-overlay"></div>
    <div class="cyber-grid"></div>
    <div class="scanline"></div>

    <div class="status-bar">
        <div class="system-info">
            <i class="fas fa-microchip"></i> KULLANICI: @User.Identity.Name.ToUpper() // STATUS: ONLINE
        </div>
        <a href="/Login/Logout" class="cyber-logout">
            <i class="fas fa-power-off"></i> DISCONNECT
        </a>
    </div>

    <div class="header-section">
        <h1>KOMUTA MERKEZİ</h1>
        <div class="role-badge">
            <i class="fas fa-shield-alt"></i> ACCESS_LEVEL: @User.FindFirst(ClaimTypes.Role)?.Value.ToUpper()
        </div>
    </div>

    <div class="dashboard-container">
        @{
            var role = User.FindFirst(ClaimTypes.Role)?.Value?.ToLower().Trim();
        }

        @if (role == "admin" || role == "memur")
        {
            <a href="/Ogrenci/Index" class="card c-student">
                <i class="fas fa-user-graduate"></i>
                <h2>ÖĞRENCİLER</h2>
                <p>Veritabanı erişimi ve kayıt terminali.</p>
            </a>

            <a href="/OgretimGorevlisi/OgrGorevlisi" class="card c-teacher">
                <i class="fas fa-user-tie"></i>
                <h2>AKADEMİK</h2>
                <p>Personel atama ve yetki modülleri.</p>
            </a>

            <a href="/Ders/Dersler" class="card c-lesson">
                <i class="fas fa-project-diagram"></i>
                <h2>MÜFREDAT</h2>
                <p>Eğitim programı ve ders planlama.</p>
            </a>

            @if (role == "admin")
            {
                <a href="/Bolum/BolumListesi" class="card c-dept">
                    <i class="fas fa-network-wired"></i>
                    <h2>BÖLÜMLER</h2>
                    <p>Birim yapılandırma ve organizasyon.</p>
                </a>

                <a href="/Kullanici/Index" class="card c-users">
                    <i class="fas fa-users-cog"></i>
                    <h2>KULLANICILAR</h2>
                    <p>Sistem erişim ve hesap protokolleri.</p>
                </a>
            }
        }
    </div>

    <script>
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mousemove', e => {
                let rect = card.getBoundingClientRect();
                let x = e.clientX - rect.left;
                let y = e.clientY - rect.top;
                let centerX = rect.width / 2;
                let centerY = rect.height / 2;
                let rotateX = (y - centerY) / 15;
                let rotateY = (centerX - x) / 15;
                card.style.transform = `translateY(-10px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            });

            card.addEventListener('mouseleave', () => {
                card.style.transform = `translateY(0) rotateX(0) rotateY(0)`;
            });
        });
    </script>
</body>
</html>