@model DenemeDers.Entity.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Kaydı";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Öğrenci Kayıt Paneli</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #f4f7f6;
            --card-bg: #ffffff;
            --primary: #6366f1;
            --text-dark: #1e293b;
            --text-muted: #64748b;
            --input-border: #e2e8f0;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-color);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: var(--text-dark);
        }

        .form-container {
            width: 100%;
            max-width: 500px;
            background: var(--card-bg);
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
            border: 1px solid rgba(255, 255, 255, 0.7);
        }

        header {
            text-align: center;
            margin-bottom: 30px;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .subtitle {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: #f8fafc;
            border: 1px solid var(--input-border);
            border-radius: 12px;
            outline: none;
            transition: all 0.2s ease;
        }

            .form-control:focus {
                border-color: var(--primary);
                background: #fff;
                box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
            }

        .form-row {
            display: flex;
            gap: 15px;
        }

            .form-row .form-group {
                flex: 1;
            }

        select.form-control {
            appearance: none;
            background-image: url('data:image/svg+xml;charset=UTF-8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%2364748b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
            background-repeat: no-repeat;
            background-position: right 12px center;
            background-size: 14px;
        }

        .btn-submit {
            width: 100%;
            padding: 14px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
        }

            .btn-submit:hover {
                transform: translateY(-1px);
                box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
            }

        .btn-back {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.85rem;
        }

        .error-msg {
            color: #ef4444;
            font-size: 0.75rem;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <header>
            <h1>Öğrenci Kaydı</h1>
            <p class="subtitle">Sistem veritabanına yeni öğrenci ekleyin</p>
        </header>

        <form method="post" asp-action="Kayit">
            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Ad</label>
                    <input type="text" class="form-control" asp-for="Ad" required placeholder="Ali">
                </div>
                <div class="form-group">
                    <label class="form-label">Soyad</label>
                    <input type="text" class="form-control" asp-for="Soyad" required placeholder="Yılmaz">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Yaş</label>
                    <input type="number" class="form-control" asp-for="Yas" required placeholder="20">
                </div>
                <div class="form-group">
                    <label class="form-label">Numara</label>
                    <input type="text" class="form-control" asp-for="OgrNo" required placeholder="1234...">
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Sınıf</label>
                <select class="form-control" asp-for="Sinif" required>
                    <option value="" disabled selected>Sınıf düzeyi seçin</option>
                    <option value="1">1. Sınıf</option>
                    <option value="2">2. Sınıf</option>
                    <option value="3">3. Sınıf</option>
                    <option value="4">4. Sınıf</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Bölüm</label>
                <select class="form-control" asp-for="BolumId" asp-items="ViewBag.Bolumler" required>
                    <option value="" disabled selected>Eğitim bölümü seçin</option>
                </select>
                <span class="error-msg">@Html.ValidationMessageFor(m => m.BolumId)</span>
            </div>

            <button type="submit" class="btn-submit">Bilgileri Sisteme Kaydet</button>

            <a href="/Ogrenci/Index/" class="btn-back">Vazgeç ve Listeye Dön</a>
        </form>
    </div>

</body>
</html>