@model DenemeDers.Entity.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Güncelle";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #f8fafc; /* Minimal açık zemin */
            --card-bg: #ffffff;
            --primary: #4f46e5; /* Modern Indigo */
            --text-dark: #0f172a;
            --text-muted: #64748b;
            --accent-soft: #eef2ff;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: var(--bg-color);
            /* Hafif bir derinlik hissi için gradient */
            background-image: radial-gradient(at 0% 0%, rgba(79, 70, 229, 0.05) 0px, transparent 50%), radial-gradient(at 100% 100%, rgba(79, 70, 229, 0.05) 0px, transparent 50%);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: var(--text-dark);
        }

        /* --- Form Kartı --- */
        .update-card {
            width: 100%;
            max-width: 520px;
            background: var(--card-bg);
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02);
            border: 1px solid rgba(226, 232, 240, 0.8);
        }

        header {
            text-align: center;
            margin-bottom: 32px;
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.02em;
            color: var(--text-dark);
            margin-bottom: 8px;
        }

        .subtitle {
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        /* --- Form Yapısı --- */
        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .full-width {
            grid-column: span 2;
        }

        .form-group {
            margin-bottom: 18px;
        }

        .form-label {
            display: block;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.025em;
            margin-bottom: 8px;
            color: var(--text-muted);
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            background: #f1f5f9;
            border: 1px solid transparent;
            border-radius: 12px;
            font-family: inherit;
            font-size: 0.95rem;
            color: var(--text-dark);
            transition: all 0.2s ease;
        }

            .form-control:focus {
                background: #ffffff;
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
                outline: none;
            }

        /* Select Özelleştirme */
        select.form-control {
            appearance: none;
            background-image: url('data:image/svg+xml;charset=UTF-8,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="%2364748b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
            background-repeat: no-repeat;
            background-position: right 12px center;
            background-size: 16px;
            cursor: pointer;
        }

        /* --- Butonlar --- */
        .btn-update {
            width: 100%;
            padding: 14px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            margin-top: 12px;
        }

            .btn-update:hover {
                background: #4338ca;
                transform: translateY(-1px);
                box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.3);
            }

        .btn-cancel {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: color 0.2s;
        }

            .btn-cancel:hover {
                color: var(--text-dark);
            }

        /* ID Bilgisi İçin Badge */
        .id-badge {
            display: inline-block;
            background: var(--accent-soft);
            color: var(--primary);
            padding: 2px 8px;
            border-radius: 6px;
            font-size: 0.75rem;
            font-family: monospace;
            margin-top: 4px;
        }
    </style>
</head>
<body>

    <div class="update-card">
        <header>
            <h1>Öğrenci Güncelleme</h1>
            <p class="subtitle">Kayıtlı verileri revize edin</p>
            <span class="id-badge">ID: @Model.OgrenciId</span>
        </header>

        <form method="post" asp-controller="Ogrenci" asp-action="Guncelle">
            <input type="hidden" asp-for="OgrenciId" />

            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Ad</label>
                    <input type="text" class="form-control" asp-for="Ad" required placeholder="Ad giriniz">
                </div>

                <div class="form-group">
                    <label class="form-label">Soyad</label>
                    <input type="text" class="form-control" asp-for="Soyad" required placeholder="Soyad giriniz">
                </div>

                <div class="form-group">
                    <label class="form-label">Yaş</label>
                    <input type="number" class="form-control" asp-for="Yas" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Öğrenci No</label>
                    <input type="number" class="form-control" asp-for="OgrNo" required>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Bölüm</label>
                    <select class="form-control" asp-for="Bolum" required>
                        <option value="">Bölüm Seçiniz...</option>
                        <option value="YBS">Yönetim Bilişim Sistemleri</option>
                        <option value="UTİ">Uluslararası Ticaret ve İşletme</option>
                        <option value="İşletme">İşletme</option>
                    </select>
                </div>

                <div class="form-group full-width">
                    <label class="form-label">Sınıf Bilgisi</label>
                    <select class="form-control" asp-for="Sinif" required>
                        <option value="">Sınıf Seçiniz...</option>
                        <option value="1">1. Sınıf</option>
                        <option value="2">2. Sınıf</option>
                        <option value="3">3. Sınıf</option>
                        <option value="4">4. Sınıf</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn-update">Değişiklikleri Uygula</button>

            <a href="/Ogrenci/Index/" class="btn-cancel">İşlemi İptal Et ve Dön</a>
        </form>
    </div>

</body>
</html>