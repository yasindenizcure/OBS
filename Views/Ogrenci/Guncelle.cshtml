@model DenemeDers.Entity.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Güncelleme Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .update-container {
        max-width: 600px;
        margin: 20px auto;
        background: rgba(16, 18, 27, 0.8);
        border: 1px solid rgba(0, 243, 255, 0.15);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
    }

    .form-header {
        border-bottom: 1px solid rgba(0, 243, 255, 0.1);
        margin-bottom: 30px;
        padding-bottom: 20px;
        text-align: center;
    }

        .form-header h1 {
            font-family: 'Orbitron', sans-serif;
            color: #00f3ff;
            font-size: 1.5rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .form-header .id-badge {
            display: inline-block;
            background: rgba(0, 243, 255, 0.1);
            color: #00f3ff;
            padding: 4px 12px;
            border-radius: 6px;
            font-family: 'Orbitron';
            font-size: 0.7rem;
            border: 1px solid rgba(0, 243, 255, 0.2);
        }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .full-width {
        grid-column: span 2;
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #64748b;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        font-family: inherit;
        transition: all 0.3s ease;
    }

    select.form-control option {
        background-color: #11121a;
        color: #fff;
    }

    .form-control:focus {
        border-color: #00f3ff;
        background: rgba(0, 243, 255, 0.05);
        box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
        outline: none;
    }

    select.form-control {
        appearance: none;
        background-image: url('data:image/svg+xml;charset=UTF-8,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="%2300f3ff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 14px;
    }

    .btn-cyber-update {
        width: 100%;
        padding: 15px;
        background: #00f3ff;
        color: #000;
        border: none;
        border-radius: 12px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 20px;
    }

        .btn-cyber-update:hover {
            box-shadow: 0 0 20px rgba(0, 243, 255, 0.4);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #64748b;
        text-decoration: none;
        font-size: 0.8rem;
        font-family: 'Orbitron';
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #ff3131;
        }

</style>

<div class="update-container">
    <div class="form-header">
        <h1>PROFİL GÜNCELLEME</h1>
    </div>

    <form method="post" asp-controller="Ogrenci" asp-action="Guncelle">
        <input type="hidden" asp-for="OgrenciId" />
        <input type="hidden" asp-for="AppUserId" />

        <div class="form-grid">
            <div class="form-group">
                <label class="form-label">AD</label>
                <input type="text" class="form-control" asp-for="Ad" required>
            </div>

            <div class="form-group">
                <label class="form-label">SOYAD</label>
                <input type="text" class="form-control" asp-for="Soyad" required>
            </div>

            <div class="form-group">
                <label class="form-label">YAŞ</label>
                <input type="number" class="form-control" asp-for="Yas" required>
            </div>

            <div class="form-group">
                <label class="form-label">ÖGRENCI NO</label>
                <input type="text" class="form-control" asp-for="OgrNo" required>
            </div>

            <div class="form-group full-width">
                <label class="form-label">BÖLÜM</label>
                <select class="form-control" asp-for="BolumId" asp-items="ViewBag.Bolumler" required>
                    <option value="">Bölüm Seçiniz...</option>
                </select>
            </div>

            <div class="form-group full-width">
                <label class="form-label">SINIF</label>
                <select class="form-control" asp-for="Sinif" required>
                    <option value="">Sınıf Seçiniz...</option>
                    <option value="1">1. Sınıf</option>
                    <option value="2">2. Sınıf</option>
                    <option value="3">3. Sınıf</option>
                    <option value="4">4. Sınıf</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn-cyber-update">ÖGRENCIYI GÜNCELLE</button>

        <a href="/Ogrenci/Index/" class="btn-cancel">ISLEMI IPTAL ET VE GERI DÖN</a>
    </form>
</div>