@model IEnumerable<DenemeDers.Entity.Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Terminali";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cyber-card {
        background: rgba(16, 18, 27, 0.6);
        border: 1px solid rgba(0, 243, 255, 0.15);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 18px;
            color: #00f3ff;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            border-bottom: 2px solid rgba(0, 243, 255, 0.2);
            text-transform: uppercase;
        }

        .cyber-table td {
            padding: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            font-size: 0.95rem;
        }

        .cyber-table tr:hover td {
            background: rgba(0, 243, 255, 0.02);
        }

    .no-badge {
        background: rgba(0, 243, 255, 0.1);
        color: #00f3ff;
        padding: 4px 12px;
        border-radius: 8px;
        font-family: 'Orbitron';
        font-size: 0.75rem;
        font-weight: bold;
        border: 1px solid rgba(0, 243, 255, 0.2);
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-student-add {
        background: rgba(0, 243, 255, 0.1);
        border: 1px solid #00f3ff;
        color: #00f3ff;
    }

        .btn-student-add:hover {
            background: #00f3ff;
            color: #000;
            box-shadow: 0 0 20px rgba(0, 243, 255, 0.4);
        }

    .btn-edit {
        border: 1px solid #6366f1;
        color: #6366f1;
        background: rgba(99, 102, 241, 0.05);
    }

        .btn-edit:hover {
            background: #6366f1;
            color: #fff;
            box-shadow: 0 0 15px #6366f1;
        }

    .btn-delete {
        border: 1px solid #ff3131;
        color: #ff3131;
        background: rgba(255, 49, 49, 0.05);
    }

        .btn-delete:hover {
            background: #ff3131;
            color: #fff;
            box-shadow: 0 0 15px #ff3131;
        }
</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid #00f3ff; padding-left: 15px;">
        <h2 style="font-family:'Orbitron'; color:#fff; letter-spacing: 2px; margin: 0;">ÖGRENCI VERI TABANI</h2>
        <p style="color: #64748b; font-size: 0.8rem; margin-top: 5px;">Sistemde kayıtlı öğrenci listesi.</p>
    </div>
    <a href="/Ogrenci/Kayit" class="btn-cyber btn-student-add">
        <i class="fas fa-user-plus"></i> YENİ KAYIT OLUSTUR
    </a>
</div>

<div class="cyber-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th style="width: 150px;">NO</th>
                <th>AD SOYAD</th>
                <th>BÖLÜM</th>
                <th>SINIF</th>
                <th style="text-align:right">İŞLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="no-badge">@item.OgrNo</span></td>
                    <td style="font-weight: 600;">@item.Ad @item.Soyad</td>
                    <td style="color: #94a3b8;">
                        <i class="fas fa-microchip" style="margin-right: 8px; font-size: 0.8rem; color: #00f3ff;"></i>
                        @item.Bolum?.BolumAdi
                    </td>
                    <td>
                        <span style="color: #6366f1; font-weight: bold;">@item.Sinif</span>. Sınıf
                    </td>
                    <td style="text-align:right; display: flex; justify-content: flex-end; gap: 10px;">
                        <a href="/Ogrenci/Guncelle/@item.OgrenciId" class="btn-cyber btn-edit">
                            <i class="fas fa-sync-alt"></i> GÜNCELLE
                        </a>
                        <a href="/Ogrenci/Sil/@item.OgrenciId" class="btn-cyber btn-delete" onclick="return confirm('Protokol kalıcı olarak silinsin mi?')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>