@model OgretimGorevlisi
@{
    ViewData["Title"] = "Akademisyen Entegrasyonu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@500;600;700&display=swap');

    .form-container {
        max-width: 550px;
        margin: 40px auto;
        background: rgba(13, 14, 20, 0.95);
        border: 1px solid rgba(213, 0, 249, 0.3);
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 0 40px rgba(213, 0, 249, 0.15);
        position: relative;
    }

    .form-header {
        text-align: center;
        margin-bottom: 30px;
        border-bottom: 1px solid rgba(213, 0, 249, 0.1);
        padding-bottom: 20px;
    }

        .form-header h2 {
            font-family: 'Orbitron', sans-serif;
            color: #d500f9;
            font-size: 1.5rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            margin: 0;
            text-shadow: 0 0 10px rgba(213, 0, 249, 0.5);
        }

        .form-header p {
            font-family: 'Rajdhani', sans-serif;
            color: #64748b;
            font-size: 0.85rem;
            margin-top: 8px;
            letter-spacing: 2px;
            font-weight: 600;
        }

    .form-group {
        margin-bottom: 25px;
    }

        .form-group label {
            display: block;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.75rem;
            color: #b388ff;
            margin-bottom: 10px;
            letter-spacing: 1.5px;
            font-weight: 700;
        }

    .input-cyber {
        width: 100%;
        padding: 14px 18px;
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-left: 3px solid #d500f9;
        border-radius: 4px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.15rem;
        font-weight: 500;
        letter-spacing: 1px;
        transition: 0.3s;
    }

        .input-cyber:focus {
            outline: none;
            border-color: #d500f9;
            background: rgba(213, 0, 249, 0.05);
            box-shadow: 0 0 20px rgba(213, 0, 249, 0.2);
        }

    select.input-cyber option {
        background-color: #0d0e14;
        color: #d500f9;
        font-family: 'Rajdhani', sans-serif;
        padding: 10px;
    }

    .btn-submit {
        width: 100%;
        padding: 18px;
        background: transparent;
        border: 1px solid #d500f9;
        color: #d500f9;
        font-family: 'Orbitron', sans-serif;
        font-weight: 700;
        font-size: 0.9rem;
        letter-spacing: 3px;
        cursor: pointer;
        transition: 0.4s;
        text-transform: uppercase;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background: #d500f9;
            color: #000;
            box-shadow: 0 0 30px rgba(213, 0, 249, 0.6);
        }

    .btn-back {
        display: block;
        text-align: center;
        margin-top: 25px;
        color: #475569;
        text-decoration: none;
        font-family: 'Orbitron', sans-serif;
        font-size: 0.7rem;
        letter-spacing: 1.5px;
        transition: 0.3s;
    }

        .btn-back:hover {
            color: #d500f9;
        }

    .text-danger {
        color: #ff1744;
        font-size: 0.8rem;
        font-family: 'Rajdhani';
        font-weight: 600;
        margin-top: 6px;
        display: block;
    }
</style>

<div class="form-container">
    <div class="form-header">
        <h2>AKADEMİSYEN KAYIT</h2>
        <p>Sisteme akademisyen ekleme paneli.</p>
    </div>

    <form method="post">
        <div class="form-group">
            <label>AKADEMİSYEN ADI</label>
            <input asp-for="Ad" class="input-cyber" placeholder="İSİM GİRİN..." required />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>AKADEMİSYEN SOYADI</label>
            <input asp-for="Soyad" class="input-cyber" placeholder="SOYİSİM GİRİN..." required />
            <span asp-validation-for="Soyad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>UNVAN</label>
            <select asp-for="Unvan" class="input-cyber" required>
                <option value="">SEÇİNİZ...</option>
                <option value="Arş. Gör.">ARŞ. GÖR.</option>
                <option value="Öğr. Gör.">ÖĞR. GÖR.</option>
                <option value="Dr. Öğr. Üyesi">DR. ÖĞR. ÜYESİ</option>
                <option value="Doç. Dr.">DOÇ. DR.</option>
                <option value="Prof. Dr.">PROF. DR.</option>
            </select>
            <span asp-validation-for="Unvan" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>BÖLÜM</label>
            <select asp-for="BolumId" class="input-cyber" asp-items="@(ViewBag.BolumListesi as SelectList)" required>
                <option value="">BÖLÜM SEÇİNİZ...</option>
            </select>
            <span asp-validation-for="BolumId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">İŞLEMİ ONAYLA</button>

        <a asp-action="OgrGorevlisi" asp-controller="OgretimGorevlisi" class="btn-back">
            <i class="fas fa-undo"></i> IPTAL ET VE GERİ DÖN
        </a>
    </form>
</div>