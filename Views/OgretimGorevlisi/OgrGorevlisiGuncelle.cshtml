@model DenemeDers.Entity.OgretimGorevlisi
@{
    ViewData["Title"] = "Akademisyen Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hoca-update-container {
        max-width: 600px;
        margin: 20px auto;
        background: rgba(16, 18, 27, 0.7);
        border: 1px solid rgba(255, 0, 255, 0.2);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        position: relative;
    }

    .form-header {
        border-bottom: 1px solid rgba(255, 0, 255, 0.1);
        margin-bottom: 30px;
        padding-bottom: 20px;
        text-align: center;
    }

        .form-header h1 {
            font-family: 'Orbitron', sans-serif;
            color: #ff00ff;
            font-size: 1.5rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            margin: 0;
            text-shadow: 0 0 15px rgba(255, 0, 255, 0.3);
        }

        .form-header .id-badge {
            display: inline-block;
            margin-top: 10px;
            background: rgba(255, 0, 255, 0.1);
            color: #ff00ff;
            padding: 4px 12px;
            border-radius: 6px;
            font-family: 'Orbitron';
            font-size: 0.7rem;
            border: 1px solid rgba(255, 0, 255, 0.2);
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #ff00ff;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #ff00ff;
            background: rgba(255, 0, 255, 0.05);
            box-shadow: 0 0 15px rgba(255, 0, 255, 0.2);
            outline: none;
        }
    select.form-control option {
        background-color: #11121a;
        color: #fff;
    }

    select.form-control {
        appearance: none;
        background-image: url('data:image/svg+xml;utf8,<svg fill="%23ff00ff" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>');
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 18px;
    }

    .btn-cyber-save {
        width: 100%;
        padding: 15px;
        background: linear-gradient(90deg, #ff00ff, #d500f9);
        color: #fff;
        border: none;
        border-radius: 10px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 20px;
        letter-spacing: 2px;
        box-shadow: 0 0 20px rgba(255, 0, 255, 0.3);
    }

        .btn-cyber-save:hover {
            box-shadow: 0 0 30px rgba(255, 0, 255, 0.6);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #64748b;
        text-decoration: none;
        font-size: 0.8rem;
        font-family: 'Orbitron';
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #ff3131;
        }
</style>

<div class="hoca-update-container">
    <div class="form-header">
        <h1>Akademisyen Güncelleme</h1>
    </div>

    <form method="post" asp-action="OgrGorevlisiGuncelle" asp-controller="OgretimGorevlisi">
        <input type="hidden" asp-for="OgretimGorevlisiId" />
        <input type="hidden" asp-for="AppUserId" />

        <div class="form-group">
            <label class="form-label">AKADEMIK ÜNVAN</label>
            <select class="form-control" asp-for="Unvan" required>
                <option value="">Seçiniz...</option>
                <option value="Arş. Gör.">Arş. Gör.</option>
                <option value="Öğr. Gör.">Öğr. Gör.</option>
                <option value="Dr. Öğr. Üyesi">Dr. Öğr. Üyesi</option>
                <option value="Doç. Dr.">Doç. Dr.</option>
                <option value="Prof. Dr.">Prof. Dr.</option>
            </select>
        </div>

        <div class="form-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
            <div class="form-group">
                <label class="form-label">AD</label>
                <input type="text" class="form-control" asp-for="Ad" required>
            </div>

            <div class="form-group">
                <label class="form-label">SOYAD</label>
                <input type="text" class="form-control" asp-for="Soyad" required>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">ATANAN DEPARTMAN</label>
            <select asp-for="BolumId" class="form-control" asp-items="@(ViewBag.BolumListesi as SelectList)" required>
                <option value="">Bölüm Değiştir...</option>
            </select>
        </div>

        <button type="submit" class="btn-cyber-save">VERİLERİ GÜNCELLE</button>

        <a href="/OgretimGorevlisi/OgrGorevlisi/" class="btn-cancel">ISLEMI IPTAL ET VE GERI DÖN</a>
    </form>
</div>