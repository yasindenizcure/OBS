@model IEnumerable<DenemeDers.Entity.OgretimGorevlisi>
@{
    ViewData["Title"] = "Akademik Kadro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hoca-card {
        background: rgba(16, 18, 27, 0.6);
        border: 1px solid rgba(255, 0, 255, 0.15);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 18px;
            color: #ff00ff;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            border-bottom: 2px solid rgba(255, 0, 255, 0.2);
            text-transform: uppercase;
        }

        .cyber-table td {
            padding: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            font-size: 0.95rem;
        }

        .cyber-table tr:hover td {
            background: rgba(255, 0, 255, 0.02);
        }

    .unvan-badge {
        background: rgba(255, 0, 255, 0.1);
        color: #ff00ff;
        padding: 4px 12px;
        border-radius: 8px;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        border: 1px solid rgba(255, 0, 255, 0.2);
        display: inline-block;
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-hoca-add {
        background: rgba(255, 0, 255, 0.1);
        border: 1px solid #ff00ff;
        color: #ff00ff;
    }

        .btn-hoca-add:hover {
            background: #ff00ff;
            color: #fff;
            box-shadow: 0 0 20px rgba(255, 0, 255, 0.4);
        }

    .btn-edit {
        border: 1px solid #00e5ff;
        color: #00e5ff;
        background: rgba(0, 229, 255, 0.05);
    }

        .btn-edit:hover {
            background: #00e5ff;
            color: #000;
            box-shadow: 0 0 15px #00e5ff;
        }

    .btn-delete {
        border: 1px solid #ff3131;
        color: #ff3131;
        background: rgba(255, 49, 49, 0.05);
    }

        .btn-delete:hover {
            background: #ff3131;
            color: #fff;
            box-shadow: 0 0 15px #ff3131;
        }
</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid #ff00ff; padding-left: 15px;">
        <h2 style="font-family:'Orbitron'; color:#fff; letter-spacing: 2px; margin: 0;">AKADEMIK KADRO YÖNETİMİ</h2>
        <p style="color: #64748b; font-size: 0.8rem; margin-top: 5px;">Sistemde kayıtlı hoca ve akademik yetkililerin listesi.</p>
    </div>
    <a href="/OgretimGorevlisi/OgrGorevlisiKayit" class="btn-cyber btn-hoca-add">
        <i class="fas fa-user-plus"></i> YENİ HOCA TANIMLA
    </a>
</div>

<div class="hoca-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th style="width: 150px;">UNVAN</th>
                <th>AD SOYAD</th>
                <th>BÖLÜM</th>
                <th style="text-align:right">İSLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="unvan-badge">@item.Unvan</span></td>
                    <td style="font-weight: 600;">@item.Ad @item.Soyad</td>
                    <td style="color: #94a3b8;">
                        <i class="fas fa-university" style="margin-right: 8px; font-size: 0.8rem;"></i>
                        @(item.Bolum?.BolumAdi ?? "Atanmamış")
                    </td>
                    <td style="text-align:right; display: flex; justify-content: flex-end; gap: 10px;">
                        <a href="/OgretimGorevlisi/OgrGorevlisiGuncelle/@item.OgretimGorevlisiId" class="btn-cyber btn-edit">
                            <i class="fas fa-user-edit"></i> DÜZENLE
                        </a>
                        <a href="/OgretimGorevlisi/OgrGorevlisiSil/@item.OgretimGorevlisiId" class="btn-cyber btn-delete" onclick="return confirm('Bu personeli ve bağlı login hesabını silmek istediğinize emin misiniz?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>