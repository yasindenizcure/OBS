@model DenemeDers.Entity.Ders

@{
    ViewData["Title"] = "Ders Müfredatı Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ders-update-container {
        max-width: 600px;
        margin: 20px auto;
        background: rgba(16, 18, 27, 0.7);
        border: 1px solid rgba(255, 170, 0, 0.2);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        position: relative;
    }

    .form-header {
        border-bottom: 1px solid rgba(255, 170, 0, 0.1);
        margin-bottom: 30px;
        padding-bottom: 20px;
        text-align: center;
    }

        .form-header h1 {
            font-family: 'Orbitron', sans-serif;
            color: #ffaa00;
            font-size: 1.5rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            margin: 0;
        }

        .form-header .id-tag {
            display: inline-block;
            margin-top: 10px;
            background: rgba(255, 170, 0, 0.1);
            color: #ffaa00;
            padding: 4px 12px;
            border-radius: 6px;
            font-family: 'Orbitron';
            font-size: 0.7rem;
            border: 1px solid rgba(255, 170, 0, 0.2);
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #ffaa00;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1rem;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #ffaa00;
            background: rgba(255, 170, 0, 0.05);
            box-shadow: 0 0 15px rgba(255, 170, 0, 0.2);
            outline: none;
        }

    select.form-control option {
        background-color: #11121a;
        color: #fff;
    }

    select.form-control {
        appearance: none;
        background-image: url('data:image/svg+xml;charset=UTF-8,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="%23ffaa00" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>');
        background-repeat: no-repeat;
        background-position: right 12px center;
        background-size: 14px;
    }

    .btn-cyber-update {
        width: 100%;
        padding: 15px;
        background: linear-gradient(90deg, #ffaa00, #ffcc33);
        color: #000;
        border: none;
        border-radius: 10px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        margin-top: 20px;
        letter-spacing: 1px;
    }

        .btn-cyber-update:hover {
            box-shadow: 0 0 25px rgba(255, 170, 0, 0.5);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #64748b;
        text-decoration: none;
        font-size: 0.8rem;
        font-family: 'Orbitron';
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #ff3131;
        }

    .validation-summary {
        color: #ff4d4d;
        font-size: 0.85rem;
        margin-bottom: 15px;
        list-style: none;
        font-family: 'Rajdhani';
    }
</style>

<div class="ders-update-container">
    <div class="form-header">
        <h1>Ders Güncelleme Sayfası</h1>
    </div>

    <div asp-validation-summary="All" class="validation-summary"></div>

    <form method="post" asp-controller="Ders" asp-action="DersGuncelle">
        <input type="hidden" asp-for="DersId" />

        <div class="form-group">
            <label class="form-label">Ders Adı</label>
            <input asp-for="DersAdi" class="form-control" required />
        </div>

        <div style="display: flex; gap: 15px;">
            <div class="form-group" style="flex: 1;">
                <label class="form-label">Sınıf</label>
                <select asp-for="SinifDuzeyi" class="form-control" required>
                    <option value="1">1. Sınıf</option>
                    <option value="2">2. Sınıf</option>
                    <option value="3">3. Sınıf</option>
                    <option value="4">4. Sınıf</option>
                </select>
            </div>
            <div class="form-group" style="flex: 1;">
                <label class="form-label">AKTS Kredisi</label>
                <input asp-for="AKTS" type="number" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Ders Türü</label>
            <select asp-for="DersTuru" class="form-control" required>
                <option value="Zorunlu">Zorunlu Ders</option>
                <option value="Seçmeli">Seçmeli Ders</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Departman</label>
            <select asp-for="BolumId" class="form-control" asp-items="ViewBag.bolumler" required>
                <option value="">Departman Seçiniz...</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Sorumlu Akademisyen</label>
            <select asp-for="OgretimGorevlisiId" class="form-control" asp-items="ViewBag.ogrGorevlisi">
                <option value="">Akademisyen Seçiniz...</option>
            </select>
        </div>

        <button type="submit" class="btn-cyber-update">DERSI GUNCELLE</button>
        <a href="/Ders/Dersler/" class="btn-cancel">ISLEMI IPTAL ET</a>
    </form>
</div>