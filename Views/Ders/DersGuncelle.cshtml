@model DenemeDers.Entity.Ders

@{
    Layout = null;
    ViewData["Title"] = "Ders Güncelleme";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            outline: none;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: #050505;
            color: #e0e0e0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow-x: hidden;
            position: relative;
            padding: 20px;
        }

        .bg-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(rgba(255, 170, 0, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 170, 0, 0.05) 1px, transparent 1px);
            background-size: 40px 40px;
            transform: perspective(800px) rotateX(20deg) scale(1.2);
            animation: gridFloat 20s infinite linear;
        }

        @@keyframes gridFloat {
            0%, 100% {
                transform: perspective(800px) rotateX(20deg) scale(1.2) translateY(0);
            }

            50% {
                transform: perspective(800px) rotateX(20deg) scale(1.2) translateY(-20px);
            }
        }

        .form-card {
            width: 100%;
            max-width: 550px;
            padding: 40px;
            background: rgba(20, 20, 35, 0.8);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 170, 0, 0.3);
            border-radius: 15px;
            position: relative;
            box-shadow: 0 0 50px rgba(255, 170, 0, 0.1);
        }

            .form-card::before {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                width: 30px;
                height: 30px;
                border-top: 3px solid #ffaa00;
                border-left: 3px solid #ffaa00;
                border-radius: 10px 0 0 0;
            }

            .form-card::after {
                content: '';
                position: absolute;
                bottom: -2px;
                right: -2px;
                width: 30px;
                height: 30px;
                border-bottom: 3px solid #ffaa00;
                border-right: 3px solid #ffaa00;
                border-radius: 0 0 10px 0;
            }

        h2 {
            font-family: 'Orbitron', sans-serif;
            text-align: center;
            color: #ffaa00;
            margin-bottom: 25px;
            letter-spacing: 2px;
            text-shadow: 0 0 10px rgba(255, 170, 0, 0.5);
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.75rem;
            color: #8a8a8a;
            margin-bottom: 6px;
            text-transform: uppercase;
        }

        .input-cyber {
            width: 100%;
            padding: 12px;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid #333;
            border-radius: 5px;
            color: #fff;
            font-size: 1rem;
            font-family: 'Rajdhani', sans-serif;
            transition: 0.3s;
        }

            .input-cyber:focus {
                border-color: #ffaa00;
                box-shadow: 0 0 10px rgba(255, 170, 0, 0.3);
                background: rgba(255, 170, 0, 0.05);
            }

        select.input-cyber option {
            background-color: #1a1a2e;
            color: #fff;
        }

        .btn-update {
            width: 100%;
            padding: 15px;
            margin-top: 20px;
            font-family: 'Orbitron', sans-serif;
            font-weight: bold;
            font-size: 1rem;
            color: #000;
            background: linear-gradient(90deg, #ffaa00, #ffcc33);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: 0.3s;
        }

            .btn-update:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 25px rgba(255, 170, 0, 0.6);
            }

        .validation-summary {
            color: #ff4d4d;
            font-size: 0.85rem;
            margin-bottom: 15px;
            list-style: none;
        }
    </style>
</head>
<body>

    <div class="bg-grid"></div>

    <div class="form-card">
        <h2>DERS GÜNCELLEME</h2>

        <div asp-validation-summary="All" class="validation-summary"></div>

        <form method="post" asp-controller="Ders" asp-action="DersGuncelle">

            <input type="hidden" asp-for="DersId" />

            <div class="form-group">
                <label>DERS ADI</label>
                <input asp-for="DersAdi" class="input-cyber" placeholder="Ders adı" required />
            </div>

            <div style="display: flex; gap: 15px;">
                <div class="form-group" style="flex: 1;">
                    <label>SINIF DÜZEYİ</label>
                    <select asp-for="SinifDuzeyi" class="input-cyber" required>
                        <option value="1">1. Sınıf</option>
                        <option value="2">2. Sınıf</option>
                        <option value="3">3. Sınıf</option>
                        <option value="4">4. Sınıf</option>
                    </select>
                </div>
                <div class="form-group" style="flex: 1;">
                    <label>AKTS</label>
                    <input asp-for="AKTS" type="number" class="input-cyber" placeholder="AKTS" required />
                </div>
            </div>

            <div class="form-group">
                <label>DERS TÜRÜ</label>
                <select asp-for="DersTuru" class="input-cyber" required>
                    <option value="Zorunlu">Zorunlu</option>
                    <option value="Seçmeli">Seçmeli</option>
                </select>
            </div>

            <div class="form-group">
                <label>BÖLÜM</label>
                <select asp-for="BolumId" class="input-cyber" asp-items="ViewBag.bolumler" required>
                    <option value="">Bölüm Seçiniz...</option>
                </select>
            </div>

            <div class="form-group">
                <label>ÖĞRETİM GÖREVLİSİ</label>
                <select asp-for="OgretimGorevlisiId" class="input-cyber" asp-items="ViewBag.ogrGorevlisi">
                    <option value="">Hoca Seçiniz...</option>
                </select>
            </div>

            <button type="submit" class="btn-update">BİLGİLERİ GÜNCELLE</button>

            <a href="/Ders/Dersler/" style="display:block; text-align:center; margin-top:15px; color:#666; text-decoration:none; font-size:0.9rem; font-family:'Orbitron'">← LİSTEYE GERİ DÖN</a>
        </form>
    </div>

</body>
</html>