@model DenemeDers.Entity.Ders

@{
    Layout = null;
    ViewData["Title"] = "Ders Güncelleme";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">

    <style>
        /* --- Temel Ayarlar --- */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            outline: none;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: #050505;
            color: #e0e0e0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
        }

        /* --- Arka Plan Animasyonu (Grid) --- */
        .bg-grid {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(rgba(255, 170, 0, 0.05) 1px, transparent 1px), /* Turuncu grid */
            linear-gradient(90deg, rgba(255, 170, 0, 0.05) 1px, transparent 1px);
            background-size: 40px 40px;
            transform: perspective(800px) rotateX(20deg) scale(1.2);
            animation: gridFloat 20s infinite linear;
        }

        @@keyframes gridFloat {
            0% {
                transform: perspective(800px) rotateX(20deg) scale(1.2) translateY(0);
            }

            50% {
                transform: perspective(800px) rotateX(20deg) scale(1.2) translateY(-20px);
            }

            100% {
                transform: perspective(800px) rotateX(20deg) scale(1.2) translateY(0);
            }
        }

        /* --- Form Kartı --- */
        .form-card {
            width: 100%;
            max-width: 500px;
            padding: 40px;
            background: rgba(20, 20, 35, 0.7);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 170, 0, 0.3); /* Turuncu Çerçeve */
            border-radius: 15px;
            box-shadow: 0 0 50px rgba(255, 170, 0, 0.1);
            position: relative;
        }

            /* Süslemeler */
            .form-card::before {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                width: 30px;
                height: 30px;
                border-top: 3px solid #ffaa00;
                border-left: 3px solid #ffaa00;
                border-radius: 10px 0 0 0;
            }

            .form-card::after {
                content: '';
                position: absolute;
                bottom: -2px;
                right: -2px;
                width: 30px;
                height: 30px;
                border-bottom: 3px solid #ffaa00;
                border-right: 3px solid #ffaa00;
                border-radius: 0 0 10px 0;
            }

        h2 {
            font-family: 'Orbitron', sans-serif;
            text-align: center;
            color: #ffaa00;
            margin-bottom: 30px;
            letter-spacing: 2px;
            text-shadow: 0 0 10px rgba(255, 170, 0, 0.5);
        }

        /* --- Form Elemanları --- */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.8rem;
            color: #8a8a8a;
            margin-bottom: 8px;
            letter-spacing: 1px;
            text-transform: uppercase; /* Tüm etiketleri otomatik büyük harf yapar */
        }

        .input-cyber {
            width: 100%;
            padding: 12px 15px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid #333;
            border-radius: 5px;
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .input-cyber:focus {
                border-color: #ffaa00;
                box-shadow: 0 0 15px rgba(255, 170, 0, 0.2);
                background: rgba(255, 170, 0, 0.05);
            }

        select.input-cyber {
            appearance: none;
            background-image: url('data:image/svg+xml;utf8,<svg fill="%23ffaa00" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>');
            background-repeat: no-repeat;
            background-position: right 10px center;
            cursor: pointer;
        }

            select.input-cyber option {
                background-color: #1a1a2e;
                color: #fff;
            }

        /* --- Butonlar --- */
        .btn-update {
            width: 100%;
            padding: 15px;
            margin-top: 10px;
            font-family: 'Orbitron', sans-serif;
            font-weight: bold;
            font-size: 1rem;
            color: #000;
            background: linear-gradient(90deg, #ffaa00, #ffcc33); /* Turuncu Gradyan */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .btn-update:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 25px rgba(255, 170, 0, 0.6);
            }

        .btn-back {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #666;
            text-decoration: none;
            font-size: 0.9rem;
            transition: 0.3s;
        }

            .btn-back:hover {
                color: #ffaa00;
            }

    </style>
</head>
<body>

    <div class="bg-grid"></div>

    <div class="form-card">
        <h2>DERS GÜNCELLEME</h2>

        <form method="post" asp-controller="Ders" asp-action="DersGuncelle">

            <input type="hidden" asp-for="DersId" />

            <div class="form-group">
                <label>DERS ADI</label>
                <input asp-for="DersAdi" class="input-cyber" placeholder="Ders adı giriniz" required />
            </div>

            <div class="form-group">
                <label>SINIF DÜZEYİ</label>
                <select asp-for="SinifDuzeyi" class="input-cyber">
                    <option value="">Seçiniz...</option>
                    <option value="1">1. Sınıf</option>
                    <option value="2">2. Sınıf</option>
                    <option value="3">3. Sınıf</option>
                    <option value="4">4. Sınıf</option>
                </select>
            </div>

            <div class="form-group">
                <label>DERS TÜRÜ</label>
                <select asp-for="DersTuru" class="input-cyber">
                    <option value="Zorunlu">Zorunlu</option>
                    <option value="Seçmeli">Seçmeli</option>
                </select>
            </div>

            <div class="form-group">
                <label>ÖĞRETİM GÖREVLİSİ</label>
                <select asp-for="OgretimGorevlisiId" class="input-cyber" asp-items="ViewBag.ogrGorevlisi">
                    <option value="">Seçiniz...</option>
                </select>
            </div>
            <button type="submit" class="btn-update">BİLGİLERİ GÜNCELLE</button>

            <a href="/Ders/Dersler/" class="btn-back">← Listeye Geri Dön</a>
        </form>
    </div>

</body>
</html>