@model IEnumerable<DenemeDers.Entity.Ders>
@{
    ViewData["Title"] = "Müfredat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ders-card {
        background: rgba(16, 18, 27, 0.6);
        border: 1px solid rgba(255, 204, 0, 0.15);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 18px;
            color: #ffcc00;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            border-bottom: 2px solid rgba(255, 204, 0, 0.2);
            text-transform: uppercase;
        }

        .cyber-table td {
            padding: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
            font-size: 0.95rem;
        }

        .cyber-table tr:hover td {
            background: rgba(255, 204, 0, 0.02);
        }

    .id-badge {
        background: rgba(255, 204, 0, 0.1);
        color: #ffcc00;
        padding: 4px 10px;
        border-radius: 6px;
        font-family: 'Orbitron';
        font-weight: bold;
        border: 1px solid rgba(255, 204, 0, 0.2);
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        transition: 0.3s all ease;
    }

    .btn-add {
        background: rgba(255, 204, 0, 0.1);
        border: 1px solid #ffcc00;
        color: #ffcc00;
    }

        .btn-add:hover {
            background: #ffcc00;
            color: #000;
            box-shadow: 0 0 20px rgba(255, 204, 0, 0.3);
        }

    .btn-edit {
        border: 1px solid #00e5ff;
        color: #00e5ff;
        background: rgba(0, 229, 255, 0.05);
    }

        .btn-edit:hover {
            background: #00e5ff;
            color: #000;
            box-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
        }

    .btn-delete {
        border: 1px solid #ff3131;
        color: #ff3131;
        background: rgba(255, 49, 49, 0.05);
    }

        .btn-delete:hover {
            background: #ff3131;
            color: #fff;
            box-shadow: 0 0 15px rgba(255, 49, 49, 0.3);
        }
</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid #ffcc00; padding-left: 15px;">
        <h2 style="font-family:'Orbitron'; color:#fff; letter-spacing: 2px; margin: 0;">MÜFREDAT</h2>
        <p style="color: #64748b; font-size: 0.8rem; margin-top: 5px;">Sistemde tanımlı ders müfredatı.</p>
    </div>
    <a href="/Ders/DersKayit" class="btn-cyber btn-add">
        <i class="fas fa-plus"></i> YENİ DERS TANIMLA
    </a>
</div>

<div class="ders-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th>DERS ADI</th>
                <th>SORUMLU AKADEMİSYEN</th>
                <th style="text-align:right">ISLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-weight: 600;">@item.DersAdi.ToUpper()</td>
                    <td>
                        <i class="fas fa-user-tie" style="color: #64748b; margin-right: 8px;"></i>
                        @(item.OgretimGorevlisi?.Unvan+ " " + item.OgretimGorevlisi?.Ad + " " + item.OgretimGorevlisi?.Soyad ?? "ATANMAMIŞ")
                    </td>
                    <td style="text-align:right; display: flex; justify-content: flex-end; gap: 10px;">
                        <a href="/Ders/DersGuncelle/@item.DersId" class="btn-cyber btn-edit" title="Güncelle">
                            <i class="fas fa-edit"></i> DÜZENLE
                        </a>
                        <a href="/Ders/DersSil/@item.DersId" class="btn-cyber btn-delete" title="Sil" onclick="return confirm('Bu dersi silmek üzeresiniz. Onaylıyor musunuz?')">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>