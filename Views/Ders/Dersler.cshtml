@model List<DenemeDers.Entity.Ders>

@{
    ViewData["Title"] = "Ders Programı";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">

    <style>
        /* --- Temel Ayarlar (Aynı Tasarım Korundu) --- */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: #050505;
            color: #e0e0e0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow-x: hidden;
        }

        .bg-anim {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            background: radial-gradient(circle at center, #1a0b2e 0%, #000000 100%);
        }

        .grid-floor {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background-image: linear-gradient(rgba(100, 0, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(100, 0, 255, 0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            transform: perspective(500px) rotateX(20deg);
            opacity: 0.6;
            animation: gridMove 20s linear infinite;
        }

        @@keyframes gridMove {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 0 50px;
            }
        }

        .panel-container {
            width: 90%;
            max-width: 1200px;
            background: rgba(20, 20, 35, 0.6);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(138, 43, 226, 0.3);
            border-radius: 12px;
            box-shadow: 0 0 40px rgba(138, 43, 226, 0.15);
            padding: 2.5rem;
            margin: 2rem 0;
        }

        h1 {
            font-family: 'Orbitron', sans-serif;
            text-align: center;
            font-size: 2.5rem;
            color: #d843ff;
            text-shadow: 0 0 15px rgba(216, 67, 255, 0.6);
            margin-bottom: 30px;
            letter-spacing: 3px;
        }

        .top-actions {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .btn-new-course {
            font-family: 'Orbitron', sans-serif;
            text-decoration: none;
            padding: 10px 25px;
            color: #00ffea;
            border: 1px solid #00ffea;
            background: rgba(0, 255, 234, 0.05);
            border-radius: 4px;
            font-size: 0.9rem;
            transition: 0.3s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .btn-new-course:hover {
                background: #00ffea;
                color: #000;
                box-shadow: 0 0 20px #00ffea;
            }

        .cyber-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .cyber-table th {
                font-family: 'Orbitron', sans-serif;
                text-align: left;
                color: #8a2be2;
                padding: 15px;
                font-size: 1rem;
                letter-spacing: 1px;
                border-bottom: 2px solid #8a2be2;
            }

            .cyber-table tbody tr {
                background: rgba(255, 255, 255, 0.03);
                transition: 0.3s;
            }

                .cyber-table tbody tr:hover {
                    background: rgba(138, 43, 226, 0.2);
                    transform: scale(1.01);
                    box-shadow: 0 0 15px rgba(138, 43, 226, 0.4);
                }

            .cyber-table td {
                padding: 15px;
                border-top: 1px solid rgba(255, 255, 255, 0.05);
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
                font-size: 1.1rem;
                vertical-align: middle;
            }

                .cyber-table td:first-child {
                    border-left: 1px solid rgba(255, 255, 255, 0.05);
                    border-top-left-radius: 8px;
                    border-bottom-left-radius: 8px;
                    color: #fff;
                    font-weight: bold;
                }

                .cyber-table td:last-child {
                    border-right: 1px solid rgba(255, 255, 255, 0.05);
                    border-top-right-radius: 8px;
                    border-bottom-right-radius: 8px;
                }

        .badge {
            padding: 5px 12px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: bold;
            font-family: 'Orbitron', sans-serif;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-block;
            min-width: 100px;
            text-align: center;
        }

        .badge-zorunlu {
            background: rgba(255, 69, 0, 0.15);
            color: #ff4500;
            border: 1px solid #ff4500;
            box-shadow: 0 0 5px rgba(255, 69, 0, 0.2);
        }

        .badge-secmeli {
            background: rgba(0, 255, 234, 0.15);
            color: #00ffea;
            border: 1px solid #00ffea;
            box-shadow: 0 0 5px rgba(0, 255, 234, 0.2);
        }

        .btn-action {
            text-decoration: none;
            padding: 6px 12px;
            border-radius: 4px;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.75rem;
            margin-left: 5px;
            transition: 0.3s;
            border: 1px solid transparent;
            display: inline-block;
        }

        .btn-edit-table {
            color: #ffaa00;
            background: rgba(255, 170, 0, 0.1);
            border-color: #ffaa00;
        }

            .btn-edit-table:hover {
                background: #ffaa00;
                color: #000;
                box-shadow: 0 0 10px #ffaa00;
            }

        .btn-del-table {
            color: #ff0055;
            background: rgba(255, 0, 85, 0.1);
            border-color: #ff0055;
        }

            .btn-del-table:hover {
                background: #ff0055;
                color: #fff;
                box-shadow: 0 0 10px #ff0055;
            }

        .no-data {
            text-align: center;
            padding: 2rem;
            color: #ff3333;
            font-family: 'Orbitron', sans-serif;
            letter-spacing: 1px;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>

    <div class="bg-anim"></div>
    <div class="grid-floor"></div>

    <div class="panel-container">
        <h1>DERS İŞLEMLERİ</h1>

        <div class="top-actions">
            <a href="/Ders/DersKayit/" class="btn-new-course">
                <span>+</span> DERS EKLE
            </a>
        </div>

        <table class="cyber-table">
            <thead>
                <tr>
                    <th>DERS ADI</th>
                    <th>SINIF DÜZEYİ</th>
                    <th>DERS TÜRÜ</th>
                    <th>ÖĞRETİM GÖREVLİSİ</th>
                    <th style="text-align: right;">İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DersAdi</td>
                            <td>@item.SinifDuzeyi. Sınıf</td>
                            <td>
                                @if (item.DersTuru == "Zorunlu")
                                {
                                    <span class="badge badge-zorunlu">ZORUNLU</span>
                                }
                                else
                                {
                                    <span class="badge badge-secmeli">SEÇMELİ</span>
                                }
                            </td>

                            <td style="color: #bbb;">
                                @if (item.OgretimGorevlisi != null)
                                {
                                    <span style="color: #fff; font-weight: 500;">
                                        @item.OgretimGorevlisi.Ad @item.OgretimGorevlisi.Soyad
                                    </span>
                                }
                                else
                                {
                                    <span style="opacity: 0.5; font-style: italic;">
                                        - Atanmadı (ID: @item.OgretimGorevlisiId) -
                                    </span>
                                }
                            </td>

                            <td style="text-align: right;">
                                <a asp-controller="Ders" asp-action="DersGuncelle" asp-route-id="@item.DersId" class="btn-action btn-edit-table">
                                    DÜZENLE
                                </a>
                                <a asp-controller="Ders" asp-action="DersSil" asp-route-id="@item.DersId"
                                   class="btn-action btn-del-table"
                                   onclick="return confirm('@item.DersAdi dersini silmek istediğinize emin misiniz?');">
                                    SİL
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="no-data">
                            SİSTEMDE KAYITLI DERS BULUNAMADI.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>