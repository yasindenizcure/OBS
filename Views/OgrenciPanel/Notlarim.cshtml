@using System.Security.Claims
@model List<DenemeDers.Entity.Not>

@{
    Layout = null;
    var adSoyad = User.Identity.Name;
    var ogrNo = User.FindFirst("OgrNo")?.Value;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Öğrenci Terminali // @adSoyad</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Orbitron:wght@600;800&family=Rajdhani:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary: #00f3ff;
            --secondary: #6366f1;
            --bg-dark: #05060b;
            --card-bg: rgba(10, 11, 16, 0.95);
            --border: rgba(0, 243, 255, 0.12);
            --success: #10b981;
            --danger: #ff3131;
            --text-main: #e2e8f0;
            --text-dim: #94a3b8;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-dark);
            background-image: radial-gradient(at 0% 0%, rgba(0, 243, 255, 0.05) 0px, transparent 40%), radial-gradient(at 100% 100%, rgba(99, 102, 241, 0.05) 0px, transparent 40%);
            color: var(--text-main);
            min-height: 100vh;
            padding: 30px 20px;
            line-height: 1.5;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .profile-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--card-bg);
            padding: 15px 25px;
            border-radius: 16px;
            border: 1px solid var(--border);
            margin-bottom: 25px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        }

        .user-info-box {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .avatar-ring {
            width: 42px;
            height: 42px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            box-shadow: 0 0 15px rgba(0, 243, 255, 0.2);
        }

        .user-text .no-tag {
            font-family: 'Orbitron';
            font-size: 0.6rem;
            color: var(--primary);
            letter-spacing: 1.5px;
            display: block;
            margin-bottom: 2px;
        }

        .user-text .name {
            font-size: 0.95rem;
            font-weight: 700;
            color: #fff;
        }

        .logout-pill {
            text-decoration: none;
            color: var(--danger);
            font-family: 'Orbitron';
            font-size: 0.65rem;
            padding: 8px 16px;
            border: 1px solid rgba(255, 49, 49, 0.2);
            border-radius: 8px;
            transition: 0.3s;
            background: rgba(255, 49, 49, 0.03);
            font-weight: 600;
        }

            .logout-pill:hover {
                background: var(--danger);
                color: #fff;
                box-shadow: 0 0 15px rgba(255, 49, 49, 0.3);
            }

        .grade-wrapper {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 45px rgba(0,0,0,0.5);
        }

        .cyber-table {
            width: 100%;
            border-collapse: collapse;
        }

            .cyber-table th {
                background: rgba(255, 255, 255, 0.02);
                padding: 16px;
                text-align: center;
                font-family: 'Orbitron';
                font-size: 0.65rem;
                color: var(--primary);
                letter-spacing: 1px;
                border-bottom: 1px solid var(--border);
                text-transform: uppercase;
            }

            .cyber-table td {
                padding: 14px 16px;
                text-align: center;
                border-bottom: 1px solid rgba(255, 255, 255, 0.03);
                font-size: 0.85rem;
            }

            .cyber-table tr:last-child td {
                border-bottom: none;
            }

            .cyber-table tr:hover td {
                background: rgba(0, 243, 255, 0.015);
            }

        .course-cell {
            text-align: left !important;
            padding-left: 25px !important;
        }

        .course-name {
            display: block;
            font-weight: 600;
            color: #fff;
            margin-bottom: 2px;
            font-size: 0.9rem;
        }

        .instructor {
            font-size: 0.75rem;
            color: var(--text-dim);
            font-weight: 400;
        }

        .score-box {
            display: inline-block;
            background: rgba(255, 255, 255, 0.04);
            padding: 5px 10px;
            border-radius: 6px;
            font-weight: 600;
            min-width: 38px;
            font-family: 'Rajdhani', sans-serif;
            font-size: 1rem;
        }

        .avg-pill {
            display: inline-block;
            color: var(--amber-neon);
            font-family: 'Orbitron', sans-serif;
            font-weight: 900;
            font-size: 1.1rem;
            text-shadow: 0 0 10px rgba(255, 170, 0, 0.5);
            padding: 4px 8px;
        }

        .status-tag {
            padding: 6px 12px;
            border-radius: 8px;
            font-family: 'Orbitron';
            font-size: 0.6rem;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            letter-spacing: 0.5px;
        }

        .pass {
            background: rgba(16, 185, 129, 0.08);
            color: var(--success);
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

        .fail {
            background: rgba(255, 49, 49, 0.08);
            color: var(--danger);
            border: 1px solid rgba(255, 49, 49, 0.2);
        }
        .summary-footer {
            margin-top: 20px;
            text-align: right;
            color: var(--text-dim);
            font-size: 0.65rem;
            font-family: 'Orbitron';
            letter-spacing: 1px;
        }

    </style>
</head>
<body>

    <div class="container">
        <div class="profile-header">
            <div class="user-info-box">
                <div class="avatar-ring">
                    <i class="fa-solid fa-user-shield"></i>
                </div>
                <div class="user-text">
                    <span class="no-tag">Öğrenci No: @ogrNo</span>
                    <span class="name">@adSoyad</span>
                </div>
            </div>
            <a href="/Login/Logout" class="logout-pill">
                <i class="fa-solid fa-power-off"></i> ÇIKIŞ YAP
            </a>
        </div>

        <div class="grade-wrapper">
            <table class="cyber-table">
                <thead>
                    <tr>
                        <th class="course-cell">DERS ADI & AKADEMISYEN</th>
                        <th>VIZE</th>
                        <th>FINAL</th>
                        <th>ORTALAMA</th>
                        <th>DURUM</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="course-cell">
                                <span class="course-name">@item.Ders?.DersAdi</span>
                                <span class="instructor">@item.OgretimGorevlisi?.Unvan @item.OgretimGorevlisi?.Ad @item.OgretimGorevlisi?.Soyad</span>
                            </td>
                            <td><span class="score-box">@item.VizeNotu</span></td>
                            <td><span class="score-box">@item.FinalNotu</span></td>
                            <td><span class="avg-pill">@item.Ortalama.ToString("0.00")</span></td>
                            <td>
                                @if (item.Ortalama >= 50)
                                {
                                    <div class="status-tag pass">
                                        <i class="fa-solid fa-circle-check"></i> GEÇTİ
                                    </div>
                                }
                                else
                                {
                                    <div class="status-tag fail">
                                        <i class="fa-solid fa-circle-xmark"></i> KALDI
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>