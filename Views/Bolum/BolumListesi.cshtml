@model List<DenemeDers.Entity.Bolum>
@{
    ViewData["Title"] = "Bölüm Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dept-card {
        background: rgba(16, 18, 27, 0.6);
        border: 1px solid rgba(255, 142, 0, 0.15);
        border-radius: 24px;
        padding: 30px;
        backdrop-filter: blur(15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: #e2e8f0;
    }

        .cyber-table th {
            text-align: left;
            padding: 18px;
            color: #ff8e00;
            font-family: 'Orbitron';
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            border-bottom: 2px solid rgba(255, 142, 0, 0.2);
            text-transform: uppercase;
        }

        .cyber-table td {
            padding: 18px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.03);
        }

    .dept-name {
        font-family: 'Rajdhani', sans-serif;
        font-weight: 700;
        font-size: 1.1rem;
        color: #fff;
        letter-spacing: 1px;
    }

    .btn-cyber {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        border-radius: 10px;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        font-weight: bold;
        transition: 0.3s;
    }

    .btn-add {
        background: rgba(255, 142, 0, 0.1);
        border: 1px solid #ff8e00;
        color: #ff8e00;
    }

        .btn-add:hover {
            background: #ff8e00;
            color: #000;
            box-shadow: 0 0 20px rgba(255, 142, 0, 0.4);
        }

    .btn-update {
        border: 1px solid #00e5ff;
        color: #00e5ff;
        background: rgba(0, 229, 255, 0.05);
    }

        .btn-update:hover {
            background: #00e5ff;
            color: #000;
            box-shadow: 0 0 15px #00e5ff;
        }

    .btn-delete {
        border: 1px solid #ff3131;
        color: #ff3131;
        background: rgba(255, 49, 49, 0.05);
    }

        .btn-delete:hover {
            background: #ff3131;
            color: #fff;
            box-shadow: 0 0 15px #ff3131;
        }
</style>

<div class="page-header" style="display:flex; justify-content:space-between; align-items:center; margin-bottom: 30px;">
    <div style="border-left: 4px solid #ff8e00; padding-left: 15px;">
        <h2 style="font-family:'Orbitron'; color:#fff; letter-spacing: 2px; margin: 0;">DEPARTMAN YÖNETİMİ</h2>
        <p style="color: #64748b; font-size: 0.8rem; margin-top: 5px;">Sistemde kayıtlı olan bölüm/departmanlar.</p>
    </div>
    <div class="action-buttons">
        <a href="/Bolum/BolumEkle" class="btn-cyber btn-add">
            <i class="fas fa-plus"></i> YENİ BÖLÜM EKLE
        </a>
    </div>
</div>

<div class="dept-card">
    <table class="cyber-table">
        <thead>
            <tr>
                <th>BÖLÜM ADI</th>
                <th style="text-align:right">İSLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="dept-name">@item.BolumAdi.ToUpper()</td>
                    <td style="text-align:right; display: flex; justify-content: flex-end; gap: 10px;">
                        <a href="/Bolum/BolumGuncelle/@item.BolumId" class="btn-cyber btn-update">
                            <i class="fas fa-sync-alt"></i> GÜNCELLE
                        </a>
                        <a href="/Bolum/BolumSil/@item.BolumId" class="btn-cyber btn-delete" onclick="return confirm('Bu bölümü silmek bağlı olan tüm verileri etkileyebilir. Onaylıyor musunuz?')">
                            <i class="fas fa-trash-alt"></i> SİL
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>