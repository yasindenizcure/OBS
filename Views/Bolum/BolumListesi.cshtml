@model List<DenemeDers.Entity.Bolum>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Bölüm Yönetimi</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-neon: #d500f9;
            --secondary-neon: #00e5ff;
            --bg-dark: #050505;
            --card-bg: rgba(20, 10, 35, 0.8);
            --gray-neon: #888;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: var(--bg-dark);
            color: #e0e0e0;
            background-image: radial-gradient(circle at 50% 50%, #1a052e 0%, #050505 100%);
            display: flex;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            width: 90%;
            max-width: 1000px;
            margin-top: 50px;
        }

        h2 {
            font-family: 'Orbitron', sans-serif;
            color: var(--primary-neon);
            text-transform: uppercase;
            letter-spacing: 4px;
            text-shadow: 0 0 15px rgba(213, 0, 249, 0.5);
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .cyber-table-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(213, 0, 249, 0.3);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.5);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th {
            font-family: 'Orbitron', sans-serif;
            color: var(--secondary-neon);
            text-align: left;
            padding: 15px;
            border-bottom: 2px solid rgba(0, 229, 255, 0.2);
        }

        td {
            padding: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .btn {
            font-family: 'Orbitron', sans-serif;
            padding: 8px 18px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            font-size: 0.75rem;
            transition: 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        /* Dashboard/Geri Dön Butonu */
        .btn-back {
            border: 1px solid var(--gray-neon);
            color: var(--gray-neon);
            margin-right: 10px;
        }

            .btn-back:hover {
                background: var(--gray-neon);
                color: #000;
                box-shadow: 0 0 20px var(--gray-neon);
            }

        .btn-add {
            border: 1px solid var(--primary-neon);
            color: var(--primary-neon);
        }

            .btn-add:hover {
                background: var(--primary-neon);
                color: #fff;
                box-shadow: 0 0 20px var(--primary-neon);
            }

        .btn-update {
            border: 1px solid var(--secondary-neon);
            color: var(--secondary-neon);
        }

            .btn-update:hover {
                background: var(--secondary-neon);
                color: #000;
                box-shadow: 0 0 20px var(--secondary-neon);
            }

        .btn-delete {
            border: 1px solid #ff1744;
            color: #ff1744;
        }

            .btn-delete:hover {
                background: #ff1744;
                color: #fff;
            }

        .badge-id {
            background: rgba(213, 0, 249, 0.2);
            color: var(--primary-neon);
            padding: 4px 8px;
            border-radius: 4px;
            border: 1px solid var(--primary-neon);
        }

        .action-container {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-start;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2><i class="fas fa-microchip"></i> BÖLÜM YÖNETİMİ</h2>

        <div class="action-container">
            <a href="/Dashboard/Index" class="btn btn-back">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>

            <a href="/Bolum/BolumEkle" class="btn btn-add">
                <i class="fas fa-plus"></i> YENİ BÖLÜM
            </a>
        </div>

        <div class="cyber-table-card">
            <table>
                <thead>
                    <tr>
                        <th># ID</th>
                        <th>Bölüm Adı</th>
                        <th style="text-align: right;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge-id">@item.BolumId</span></td>
                            <td><strong>@item.BolumAdi</strong></td>
                            <td style="text-align: right; display: flex; justify-content: flex-end; gap: 10px;">
                                <a href="/Bolum/BolumGuncelle/@item.BolumId" class="btn btn-update"><i class="fas fa-edit"></i> GÜNCELLE</a>
                                <a href="/Bolum/BolumSil/@item.BolumId" class="btn btn-delete" onclick="return confirm('Emin misiniz?')"><i class="fas fa-trash-alt"></i> SİL</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>