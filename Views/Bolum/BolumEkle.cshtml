@model DenemeDers.Entity.Bolum
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yeni Bölüm Tanımlama</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Rajdhani:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        :root {
            --primary-neon: #d500f9;
            --secondary-neon: #00e5ff;
            --bg-dark: #050505;
            --glass-bg: rgba(20, 10, 35, 0.8);
            --text-color: #e0e0e0;
        }

        body {
            font-family: 'Rajdhani', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            background-image: radial-gradient(circle at 50% 50%, #1a052e 0%, #050505 100%);
        }

        .form-card {
            width: 100%;
            max-width: 450px;
            padding: 40px;
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(0, 229, 255, 0.3);
            border-radius: 20px;
            box-shadow: 0 0 50px rgba(0, 229, 255, 0.1);
            position: relative;
            animation: slideIn 0.6s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Köşe Detayı */
        .form-card::after {
            content: 'ADMIN_ACCESS';
            position: absolute;
            top: 10px;
            right: 15px;
            font-family: 'Orbitron', sans-serif;
            font-size: 10px;
            color: var(--secondary-neon);
            letter-spacing: 2px;
            opacity: 0.6;
        }

        h2 {
            font-family: 'Orbitron', sans-serif;
            text-align: center;
            color: var(--secondary-neon);
            margin-bottom: 35px;
            letter-spacing: 3px;
            text-shadow: 0 0 10px rgba(0, 229, 255, 0.5);
        }

        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            font-family: 'Orbitron', sans-serif;
            font-size: 0.75rem;
            color: var(--secondary-neon);
            margin-bottom: 10px;
            letter-spacing: 1px;
        }

        .input-cyber {
            width: 100%;
            padding: 15px;
            background: rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(0, 229, 255, 0.2);
            border-radius: 8px;
            color: #fff;
            font-family: 'Rajdhani', sans-serif;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

            .input-cyber:focus {
                border-color: var(--primary-neon);
                box-shadow: 0 0 15px rgba(213, 0, 249, 0.3);
                background: rgba(213, 0, 249, 0.05);
                outline: none;
            }

        .btn-group {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-submit {
            padding: 15px;
            font-family: 'Orbitron', sans-serif;
            font-weight: bold;
            color: #fff;
            background: linear-gradient(90deg, #aa00ff, #00e5ff);
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.4s;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

            .btn-submit:hover {
                letter-spacing: 4px;
                box-shadow: 0 0 30px rgba(0, 229, 255, 0.6);
                transform: translateY(-2px);
            }

        .btn-cancel {
            text-align: center;
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
            transition: 0.3s;
        }

            .btn-cancel:hover {
                color: #fff;
            }

        .validation-msg {
            color: #ff1744;
            font-size: 0.8rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>

    <div class="form-card">
        <h2><i class="fas fa-layer-group"></i> BÖLÜM EKLE</h2>

        <form method="post" asp-action="BolumEkle" asp-controller="Bolum">
            <div class="form-group">
                <label><i class="fas fa-tag"></i> BÖLÜM ADI</label>
                <input asp-for="BolumAdi" class="input-cyber" placeholder="Örn: Yazılım Mühendisliği" required />
                <span asp-validation-for="BolumAdi" class="validation-msg"></span>
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-submit">SİSTEME KAYDET</button>
                <a href="/Bolum/BolumListesi" class="btn-cancel">İşlemi İptal Et ve Geri Dön</a>
            </div>
        </form>
    </div>

</body>
</html>