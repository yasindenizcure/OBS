@model DenemeDers.Entity.Bolum
@{
    ViewData["Title"] = "Yeni Bölüm Tanımla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dept-add-container {
        max-width: 500px;
        margin: 40px auto;
        background: rgba(16, 18, 27, 0.7);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        position: relative;
    }

        .dept-add-container::after {
            position: absolute;
            top: 15px;
            right: 20px;
            font-family: 'Orbitron', sans-serif;
            font-size: 10px;
            color: #00e5ff;
            letter-spacing: 2px;
            opacity: 0.6;
        }

    .form-header {
        text-align: center;
        margin-bottom: 35px;
    }

        .form-header h2 {
            font-family: 'Orbitron', sans-serif;
            color: #00e5ff;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-shadow: 0 0 15px rgba(0, 229, 255, 0.3);
        }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #00e5ff;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .input-cyber {
        width: 100%;
        padding: 15px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(0, 229, 255, 0.2);
        border-radius: 12px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .input-cyber:focus {
            border-color: #d500f9;
            background: rgba(213, 0, 249, 0.05);
            box-shadow: 0 0 20px rgba(213, 0, 249, 0.2);
            outline: none;
        }

    .btn-cyber-submit {
        width: 100%;
        padding: 15px;
        background: linear-gradient(90deg, #aa00ff, #00e5ff);
        color: #fff;
        border: none;
        border-radius: 12px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.4s;
        letter-spacing: 2px;
        margin-top: 20px;
    }

        .btn-cyber-submit:hover {
            letter-spacing: 4px;
            box-shadow: 0 0 30px rgba(0, 229, 255, 0.5);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #64748b;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.8rem;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #ff3131;
        }
</style>

<div class="dept-add-container">
    <div class="form-header">
        <h2>Bölüm Ekle Sayfası</h2>
        <p style="color:#64748b; font-family:'Rajdhani'; font-size: 0.9rem; margin-top:10px;">Yeni bir bölümü sisteme ekleyin.</p>
    </div>

    <form method="post" asp-action="BolumEkle" asp-controller="Bolum">
        <div class="form-group">
            <label class="form-label">Departman Adı</label>
            <input asp-for="BolumAdi" class="input-cyber" placeholder="Örn: Yazılım Mühendisliği" required />
            <span asp-validation-for="BolumAdi" style="color:#ff3131; font-size:0.8rem; font-family:'Rajdhani'"></span>
        </div>

        <button type="submit" class="btn-cyber-submit">BÖLÜMÜ KAYDET</button>
        <a href="/Bolum/BolumListesi" class="btn-cancel">IPTAL ET VE GERI DÖN</a>
    </form>
</div>