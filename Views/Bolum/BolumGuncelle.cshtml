@model DenemeDers.Entity.Bolum
@{
    ViewData["Title"] = "Bölüm Güncelleme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dept-form-container {
        max-width: 500px;
        margin: 40px auto;
        background: rgba(16, 18, 27, 0.7);
        border: 1px solid rgba(255, 142, 0, 0.2);
        border-radius: 24px;
        padding: 40px;
        backdrop-filter: blur(15px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
        position: relative;
    }

        .dept-form-container::after {
            position: absolute;
            top: 15px;
            right: 20px;
            font-family: 'Orbitron', sans-serif;
            font-size: 10px;
            color: #ff8e00;
            letter-spacing: 2px;
            opacity: 0.6;
        }

    .form-header {
        text-align: center;
        margin-bottom: 35px;
    }

        .form-header h2 {
            font-family: 'Orbitron', sans-serif;
            color: #ff8e00;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-shadow: 0 0 15px rgba(255, 142, 0, 0.3);
        }

    .id-badge {
        display: inline-block;
        margin-top: 10px;
        background: rgba(255, 142, 0, 0.1);
        color: #ff8e00;
        padding: 4px 12px;
        border-radius: 6px;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        border: 1px solid rgba(255, 142, 0, 0.2);
    }

    .form-label {
        display: block;
        font-family: 'Orbitron';
        font-size: 0.7rem;
        color: #ff8e00;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .input-cyber {
        width: 100%;
        padding: 15px;
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 142, 0, 0.2);
        border-radius: 12px;
        color: #fff;
        font-family: 'Rajdhani', sans-serif;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .input-cyber:focus {
            border-color: #ff8e00;
            background: rgba(255, 142, 0, 0.05);
            box-shadow: 0 0 20px rgba(255, 142, 0, 0.2);
            outline: none;
        }

    .btn-cyber-update {
        width: 100%;
        padding: 15px;
        background: #ff8e00;
        color: #000;
        border: none;
        border-radius: 12px;
        font-family: 'Orbitron';
        font-weight: bold;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.4s;
        letter-spacing: 1px;
        margin-top: 20px;
    }

        .btn-cyber-update:hover {
            box-shadow: 0 0 30px rgba(255, 142, 0, 0.5);
            transform: translateY(-2px);
        }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #64748b;
        text-decoration: none;
        font-family: 'Orbitron';
        font-size: 0.8rem;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            color: #ff3131;
        }
</style>

<div class="dept-form-container">
    <div class="form-header">
        <h2>Bölüm Güncelleme Sayfası</h2>
    </div>

    <form method="post" asp-action="BolumGuncelle" asp-controller="Bolum">
        <input type="hidden" asp-for="BolumId" />

        <div class="form-group">
            <label class="form-label">Bölüm Adı</label>
            <input asp-for="BolumAdi" class="input-cyber" required />
            <span asp-validation-for="BolumAdi" style="color:#ff3131; font-size:0.8rem; font-family:'Rajdhani'"></span>
        </div>

        <button type="submit" class="btn-cyber-update">DEGISIKLIKLERI KAYDET</button>
        <a href="/Bolum/BolumListesi" class="btn-cancel">VAZGEÇ VE GERI DÖN</a>
    </form>
</div>